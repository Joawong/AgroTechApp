@page
@model RegisterModel

@{
    ViewData["Title"] = "Registrarse";
}

<div class="login-layout">
    <!-- Columna izquierda: Formulario de Registro -->
    <div class="login-wrapper">
        <div class="login-header text-center mb-5">
            <h1 class="company-name">AgroTech</h1>
            <p class="login-subtitle">Crear Cuenta</p>
        </div>

        <div class="register-promo text-center mb-4">
            <p class="promo-text">
                ¿Ya tienes una cuenta?
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="promo-link">Inicia Sesión</a>
            </p>
        </div>

        <div class="login-form-container">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                <div class="form-group mb-4">
                    <label for="Input.Email" class="form-label">Correo Electrónico</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="tu@correo.com" />
                    <span asp-validation-for="Input.Email" class="text-danger small mt-1"></span>
                </div>

                <div class="form-group mb-4">
                    <label for="Input.Password" class="form-label">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="••••••••" />
                    <span asp-validation-for="Input.Password" class="text-danger small mt-1"></span>
                </div>

                <div class="form-group mb-4">
                    <label for="Input.ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="••••••••" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small mt-1"></span>
                </div>

                <button id="registerSubmit" type="submit" class="btn btn-login w-100 py-3">
                    Registrarse
                </button>
            </form>
        </div>

        <div class="login-footer text-center mt-5">
            <p class="copyright">
                Copyright © 2024 AgroTech. Todos los derechos reservados.
            </p>
            <div class="footer-links">
                <a href="#" class="footer-link">Términos de Servicio</a>
                <span class="separator-dot">•</span>
                <a href="#" class="footer-link">Política de Privacidad</a>
            </div>
        </div>
    </div>

    <!-- Columna derecha: Imagen animada -->
    <div class="login-visual">
        <div class="finca-image"></div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <style>
        .login-layout {
            display: flex;
            min-height: 100vh;
            background: #f0f0f0;
        }

        .login-wrapper {
            flex: 1;
            max-width: 450px;
            background: white;
            color: #2c3e50;
            padding: 3rem 2.5rem;
            border-radius: 0 12px 12px 0;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

        .login-visual {
            flex: 1;
            position: relative;
            background: #16213e;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px 0 0 12px;
            overflow: hidden;
        }

        .finca-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('https://i.redd.it/4w8jxyi56if41.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            z-index: 1;
            opacity: 0.9;
        }

        .login-visual::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom right, rgba(22, 33, 62, 0.6), rgba(22, 33, 62, 0.3));
            z-index: 2;
        }

        .company-name {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, #2A6BBF 0%, #6CA6D9 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 0.5rem;
        }

        .login-subtitle {
            font-size: 1.5rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 0;
        }

        .register-promo {
            background: linear-gradient(135deg, #077408 0%, #64A85F 100%);
            color: white;
            padding: 1rem;
            border-radius: 8px;
            margin: 0 -0.5rem;
        }

        .promo-text {
            margin: 0;
            font-size: 0.95rem;
        }

        .promo-link {
            color: white;
            font-weight: 600;
            text-decoration: underline;
        }

            .promo-link:hover {
                color: #e8f4e8;
            }

        .form-label {
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .form-control {
            border: 2px solid #e9ecef;
            border-radius: 8px;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #2A6BBF;
                box-shadow: 0 0 0 3px rgba(42, 107, 191, 0.1);
            }

        .btn-login {
            background: linear-gradient(135deg, #2A6BBF 0%, #6CA6D9 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(42, 107, 191, 0.3);
            }

        .login-footer {
            border-top: 1px solid #e9ecef;
            padding-top: 1.5rem;
        }

        .copyright {
            color: #6c757d;
            font-size: 0.85rem;
            margin-bottom: 0.5rem;
        }

        .footer-links {
            font-size: 0.8rem;
        }

        .footer-link {
            color: #6CA6D9;
            text-decoration: none;
        }

            .footer-link:hover {
                color: #2A6BBF;
                text-decoration: underline;
            }

        .separator-dot {
            color: #6c757d;
            margin: 0 0.5rem;
        }

        @@media (max-width: 768px) {
            .login-layout

        {
            flex-direction: column;
        }

        .login-wrapper, .login-visual {
            border-radius: 0;
            max-width: 100%;
        }

        .finca-image {
            height: 200px;
        }

        }
    </style>
}
