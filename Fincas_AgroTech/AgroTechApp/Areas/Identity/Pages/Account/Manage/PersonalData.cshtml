@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Datos personales";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
    .pd-card {
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 15px 40px rgba(0,0,0,.1);
        overflow: hidden;
        animation: fadeIn .5s ease-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .pd-header {
        background: linear-gradient(135deg, #dc3545, #ff6b6b);
        color: #fff;
        padding: 2rem;
        position: relative;
    }

        .pd-header i {
            position: absolute;
            right: 2rem;
            top: 50%;
            transform: translateY(-50%);
            font-size: 3rem;
            opacity: .2;
        }

        .pd-header h3 {
            margin: 0;
            font-weight: 700;
            font-size: 1.8rem;
        }

        .pd-header p {
            margin-top: .5rem;
            opacity: .95;
        }

    .pd-body {
        padding: 2.5rem;
    }

    .pd-warning {
        background: #fff3cd;
        border-left: 5px solid #ffc107;
        padding: 1.2rem;
        border-radius: 12px;
        margin-bottom: 2rem;
        display: flex;
        gap: 1rem;
        align-items: flex-start;
    }

        .pd-warning i {
            color: #856404;
            font-size: 1.5rem;
            margin-top: .2rem;
        }

        .pd-warning strong {
            display: block;
            color: #856404;
            margin-bottom: .3rem;
        }

    .pd-actions {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .pd-btn {
        border-radius: 14px;
        font-weight: 600;
        padding: 1rem 1.5rem;
        transition: all .3s ease;
    }

    .pd-btn-primary {
        background: linear-gradient(135deg, #2E8B57, #3CB371);
        border: none;
        color: #fff;
    }

        .pd-btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(46,139,87,.3);
        }

    .pd-btn-danger {
        background: linear-gradient(135deg, #dc3545, #ff6b6b);
        border: none;
        color: #fff;
    }

        .pd-btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(220,53,69,.3);
        }
</style>

<div class="pd-card">

    <!-- HEADER -->
    <div class="pd-header">
        <i class="fas fa-database"></i>
        <h3>Datos personales</h3>
        <p>Descarga o elimina la información asociada a tu cuenta</p>
    </div>

    <!-- BODY -->
    <div class="pd-body">

        <div class="pd-warning">
            <i class="fas fa-exclamation-triangle"></i>
            <div>
                <strong>Advertencia importante</strong>
                <p>
                    Tu cuenta contiene datos personales que has proporcionado.
                    Puedes descargarlos o eliminarlos.
                    <br />
                    <strong>Eliminar estos datos borrará permanentemente tu cuenta y no se podrá recuperar.</strong>
                </p>
            </div>
        </div>

        <div class="pd-actions">

            <form id="download-data"
                  asp-page="DownloadPersonalData"
                  method="post">
                <button type="submit" class="btn pd-btn pd-btn-primary">
                    <i class="fas fa-download me-2"></i>
                    Descargar datos
                </button>
            </form>

            <a id="delete"
               asp-page="DeletePersonalData"
               class="btn pd-btn pd-btn-danger">
                <i class="fas fa-trash-alt me-2"></i>
                Eliminar cuenta
            </a>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
