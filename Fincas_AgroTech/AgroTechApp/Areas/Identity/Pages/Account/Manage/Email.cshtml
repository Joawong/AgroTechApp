@page
@model EmailModel
@{
    ViewData["Title"] = "Correo electrónico";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
    .email-card {
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 15px 40px rgba(0,0,0,.1);
        overflow: hidden;
        animation: fadeIn .5s ease-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .email-header {
        background: linear-gradient(135deg, #2E8B57, #3CB371);
        color: #fff;
        padding: 2rem;
        position: relative;
    }

        .email-header i {
            position: absolute;
            right: 2rem;
            top: 50%;
            transform: translateY(-50%);
            font-size: 3rem;
            opacity: .2;
        }

        .email-header h3 {
            margin: 0;
            font-weight: 700;
            font-size: 1.8rem;
        }

        .email-header p {
            margin-top: .5rem;
            opacity: .9;
        }

    .email-body {
        padding: 2.5rem;
    }

    .email-input {
        border-radius: 12px !important;
        padding: 1rem;
        font-family: 'Poppins', sans-serif;
    }

    .email-btn {
        background: linear-gradient(135deg, #2E8B57, #3CB371);
        border: none;
        border-radius: 14px;
        font-weight: 600;
        padding: 1rem;
        transition: all .3s ease;
    }

        .email-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(46,139,87,.3);
        }

    .email-verified {
        background: #e9f7ef;
        border-radius: 12px;
    }

    .verify-btn {
        font-size: .9rem;
        padding-left: 0;
    }
</style>

<div class="email-card">

    <!-- HEADER -->
    <div class="email-header">
        <i class="fas fa-envelope"></i>
        <h3>Correo electrónico</h3>
        <p>Administra y actualiza tu dirección de correo</p>
    </div>

    <!-- BODY -->
    <div class="email-body">

        <partial name="_StatusMessage" for="StatusMessage" />

        <form id="email-form" method="post">

            <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>

            @if (Model.IsEmailConfirmed)
            {
                <div class="form-floating mb-4 input-group email-verified">
                    <input asp-for="Email"
                           class="form-control email-input"
                           disabled />
                    <span class="input-group-text text-success fw-bold">✓</span>
                    <label asp-for="Email"></label>
                </div>
            }
            else
            {
                <div class="form-floating mb-4">
                    <input asp-for="Email"
                           class="form-control email-input"
                           disabled />
                    <label asp-for="Email"></label>
                    <button id="email-verification"
                            type="submit"
                            asp-page-handler="SendVerificationEmail"
                            class="btn btn-link verify-btn">
                        <i class="fas fa-paper-plane me-1"></i>
                        Enviar correo de verificación
                    </button>
                </div>
            }

            <div class="form-floating mb-4">
                <input asp-for="Input.NewEmail"
                       class="form-control email-input"
                       autocomplete="email"
                       placeholder="Nuevo correo electrónico" />
                <label asp-for="Input.NewEmail"></label>
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>

            <button id="change-email-button"
                    type="submit"
                    asp-page-handler="ChangeEmail"
                    class="btn email-btn w-100">
                <i class="fas fa-save me-2"></i>
                Cambiar correo
            </button>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
