@model AgroTechApp.Models.DB.Potrero

@{
    ViewData["Title"] = "Editar Potrero";
    var primaryColor = "#2E8B57";
}

<style>
    :root {
        --primary: @primaryColor;
        --secondary: #6c757d;
        --light: #f8f9fa;
        --dark: #343a40;
        --border: #e1e5e9;
        --success: #28a745;
        --danger: #dc3545;
        --warning: #ffc107;
    }

    * {
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        margin: 0;
        padding: 20px;
        min-height: 100vh;
    }

    .edit-container {
        max-width: 800px;
        margin: 0 auto;
        background: white;
        border-radius: 20px;
        box-shadow: 0 15px 40px rgba(0,0,0,0.1);
        overflow: hidden;
        animation: slideUp 0.6s ease-out;
    }

    .edit-header {
        background: linear-gradient(135deg, var(--primary), #3CB371);
        color: white;
        padding: 2rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .edit-header-icon {
        font-size: 2.5rem;
    }

    .edit-header-content h1 {
        margin: 0;
        font-size: 2rem;
        font-weight: 600;
    }

    .edit-header-content p {
        margin: 0.5rem 0 0;
        opacity: 0.9;
        font-size: 1.1rem;
    }

    .edit-body {
        padding: 2.5rem;
    }

    .potrero-info {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .info-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .info-item .label {
            font-weight: 600;
            color: var(--dark);
        }

        .info-item .value {
            color: var(--primary);
            font-weight: 600;
        }

    .edit-section {
        margin-bottom: 2rem;
    }

        .edit-section h3 {
            color: var(--dark);
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid var(--primary);
            font-size: 1.3rem;
        }

    .form-group {
        margin-bottom: 1.5rem;
    }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
            color: var(--dark);
        }

            .form-group label.required::after {
                content: " *";
                color: var(--danger);
            }

    .form-control {
        width: 100%;
        padding: 0.875rem 1rem;
        border: 2px solid var(--border);
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(46, 139, 87, 0.1);
        }

    .input-group {
        position: relative;
    }

        .input-group .icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--secondary);
        }

        .input-group .form-control {
            padding-left: 3rem;
        }

    .btn-primary {
        background-color: var(--primary);
        border: none;
        padding: 0.75rem 1.5rem;
        color: white;
        border-radius: 10px;
        cursor: pointer;
        font-size: 1rem;
        transition: 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #276f48;
        }

    .btn-secondary {
        background-color: var(--secondary);
        border: none;
        padding: 0.75rem 1.5rem;
        color: white;
        border-radius: 10px;
        cursor: pointer;
        font-size: 1rem;
    }
</style>


<div class="edit-container">

    <!-- HEADER -->
    <div class="edit-header">
        <div class="edit-header-icon">🌿</div>
        <div class="edit-header-content">
            <h1>Editar Potrero</h1>
            <p>Modifica la información del potrero seleccionado</p>
        </div>
    </div>

    <!-- BODY -->
    <div class="edit-body">

        <!-- INFO -->
        <div class="potrero-info">
            <div class="info-item">
                <span class="label">Finca:</span>
                <span class="value">@ViewBag.FincaNombre</span>
            </div>
            <div class="info-item">
                <span class="label">ID:</span>
                <span class="value">@Model.PotreroId</span>
            </div>
        </div>

        <!-- FORM -->
        <form asp-action="Edit">
            <input type="hidden" asp-for="PotreroId" />

            <div class="edit-section">
                <h3>Información general</h3>

                <div class="form-group">
                    <label asp-for="Nombre" class="required"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Hectareas" class="required"></label>
                    <input asp-for="Hectareas" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Hectareas" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Activo"></label>
                    <input asp-for="Activo" type="checkbox" />
                </div>
            </div>

            <div style="display:flex; gap:1rem;">
                <button type="submit" class="btn-primary">Guardar cambios</button>
                <a asp-action="Index" class="btn-secondary">Cancelar</a>
            </div>
        </form>

    </div>
</div>
