@model AgroTechApp.Models.DB.Potrero

@{
    ViewData["Title"] = "Nuevo Potrero";
    var primaryColor = "#2E8B57";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgroTech</title>
    <style>
        :root {
            --primary: @primaryColor;
            --secondary: #6c757d;
            --light: #f8f9fa;
            --dark: #343a40;
            --border: #e1e5e9;
            --success: #28a745;
            --danger: #dc3545;
            --warning: #ffc107;
        }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            margin: 0;
            padding: 20px;
            min-height: 100vh;
        }

        .form-container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            border-radius: 20px;
            box-shadow: 0 15px 40px rgba(0,0,0,0.1);
            overflow: hidden;
            animation: slideUp 0.6s ease-out;
        }

        .form-header {
            background: linear-gradient(135deg, var(--primary), #3CB371);
            color: white;
            padding: 2rem;
            text-align: center;
        }

            .form-header h1 {
                margin: 0;
                font-size: 2rem;
                font-weight: 600;
            }

            .form-header p {
                margin: 0.5rem 0 0;
                opacity: 0.9;
                font-size: 1.1rem;
            }

        .form-body {
            padding: 2.5rem;
        }

        .form-section {
            margin-bottom: 2rem;
        }

            .form-section h3 {
                color: var(--dark);
                margin-bottom: 1rem;
                padding-bottom: 0.5rem;
                border-bottom: 2px solid var(--primary);
                font-size: 1.3rem;
            }

        .form-group {
            margin-bottom: 1.5rem;
        }

            .form-group label {
                display: block;
                margin-bottom: 0.5rem;
                font-weight: 600;
                color: var(--dark);
            }

                .form-group label.required::after {
                    content: " *";
                    color: var(--danger);
                }

        .form-control {
            width: 100%;
            padding: 0.875rem 1rem;
            border: 2px solid var(--border);
            border-radius: 10px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                outline: none;
                border-color: var(--primary);
                box-shadow: 0 0 0 3px rgba(46, 139, 87, 0.1);
            }

        .input-group {
            position: relative;
        }

            .input-group .icon {
                position: absolute;
                left: 1rem;
                top: 50%;
                transform: translateY(-50%);
                color: var(--secondary);
            }

            .input-group .form-control {
                padding-left: 3rem;
            }

        .form-text {
            display: block;
            margin-top: 0.25rem;
            font-size: 0.875rem;
            color: var(--secondary);
        }

        .validation-summary {
            background: #f8d7da;
            border: 1px solid #f5c6cb;
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 1.5rem;
            color: #721c24;
        }

            .validation-summary ul {
                margin: 0;
                padding-left: 1.5rem;
            }

        .field-validation-error {
            display: block;
            margin-top: 0.25rem;
            font-size: 0.875rem;
            color: var(--danger);
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            justify-content: flex-end;
            margin-top: 2rem;
            padding-top: 1.5rem;
            border-top: 1px solid var(--border);
        }

        .btn {
            padding: 0.875rem 1.5rem;
            border: none;
            border-radius: 10px;
            font-size: 1rem;
            font-weight: 600;
            text-decoration: none;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary), #3CB371);
            color: white;
            box-shadow: 0 4px 15px rgba(46, 139, 87, 0.3);
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #26734d, var(--primary));
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(46, 139, 87, 0.4);
            }

        .btn-secondary {
            background: white;
            color: var(--secondary);
            border: 2px solid var(--border);
        }

            .btn-secondary:hover {
                background: var(--light);
                border-color: var(--secondary);
            }

        .toggle-group {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .toggle-switch {
            position: relative;
            display: inline-block;
            width: 60px;
            height: 30px;
        }

            .toggle-switch input {
                opacity: 0;
                width: 0;
                height: 0;
            }

        .toggle-slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 34px;
        }

            .toggle-slider:before {
                position: absolute;
                content: "";
                height: 22px;
                width: 22px;
                left: 4px;
                bottom: 4px;
                background-color: white;
                transition: .4s;
                border-radius: 50%;
            }

        input:checked + .toggle-slider {
            background-color: var(--success);
        }

            input:checked + .toggle-slider:before {
                transform: translateX(30px);
            }

        .info-card {
            background: #e8f5e9;
            border: 1px solid #c8e6c9;
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }

            .info-card h4 {
                margin: 0 0 0.5rem 0;
                color: #2e7d32;
                font-size: 1rem;
            }

            .info-card p {
                margin: 0;
                color: #4caf50;
                font-size: 0.9rem;
            }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@media (max-width: 768px) {
            body {
                padding: 10px;
            }

            .form-body {
                padding: 1.5rem;
            }

            .form-actions {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <div class="form-container">
        <div class="form-header">
            <h1>🌱 Nuevo Potrero</h1>
            <p>Complete el formulario para registrar un nuevo potrero</p>
        </div>

        <div class="form-body">
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="validation-summary" role="alert">
                    <h4>Por favor corrija los siguientes errores:</h4>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }

            <form asp-action="Create">
                <div class="form-section">
                    <h3>Información Básica</h3>

                    <div class="info-card">
                        <h4>💡 Información importante</h4>
                        <p>El potrero es una unidad de tierra dedicada al pastoreo de animales. Asegúrese de especificar correctamente las hectáreas y la finca correspondiente.</p>
                    </div>

                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label required">Nombre del Potrero</label>
                        <div class="input-group">
                            <span class="icon">📍</span>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: Potrero Norte, La Pradera, etc." />
                        </div>
                        <span asp-validation-for="Nombre" class="field-validation-error"></span>
                        <small class="form-text">Use un nombre descriptivo para identificar fácilmente el potrero</small>
                    </div>

                    <div class="form-group">
                        <label asp-for="FincaId" class="control-label required">Finca</label>
                        <select asp-for="FincaId" class="form-control" asp-items="ViewBag.FincaId">
                            <option value="">-- Seleccione una finca --</option>
                        </select>
                        <span asp-validation-for="FincaId" class="field-validation-error"></span>
                    </div>
                </div>

                <div class="form-section">
                    <h3>Características</h3>

                    <div class="form-group">
                        <label asp-for="Hectareas" class="control-label required">Hectáreas</label>
                        <div class="input-group">
                            <span class="icon">📏</span>
                            <input asp-for="Hectareas" class="form-control" type="number" step="0.01" min="0.01" placeholder="Ej: 5.5, 10.25, etc." />
                        </div>
                        <span asp-validation-for="Hectareas" class="field-validation-error"></span>
                        <small class="form-text">Ingrese el área en hectáreas con hasta 2 decimales</small>
                    </div>

                    <div class="form-group">
                        <label class="control-label required">Estado</label>
                        <div class="toggle-group">
                            <div class="toggle-switch">
                                <input asp-for="Activo" type="checkbox" checked="checked" />
                                <span class="toggle-slider"></span>
                            </div>
                            <span>@(Model?.Activo == true ? "Activo" : "Inactivo")</span>
                        </div>
                        <small class="form-text">Los potreros activos pueden recibir animales</small>
                    </div>
                </div>

                <div class="form-actions">
                    <a asp-action="Index" class="btn btn-secondary">
                        <span>↩️</span> Volver al Listado
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <span>💾</span> Guardar Potrero
                    </button>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }

        <script>
            document.addEventListener('DOMContentLoaded', function() {
                // Actualizar etiqueta del toggle
                const toggle = document.querySelector('input[type="checkbox"]');
                const toggleLabel = toggle.closest('.form-group').querySelector('.toggle-group span:last-child');

                toggle.addEventListener('change', function() {
                    toggleLabel.textContent = this.checked ? 'Activo' : 'Inactivo';
                });

                // Validación en tiempo real
                const inputs = document.querySelectorAll('.form-control');
                inputs.forEach(input => {
                    input.addEventListener('blur', function() {
                        if (this.value.trim() === '') {
                            this.style.borderColor = 'var(--danger)';
                        } else {
                            this.style.borderColor = 'var(--border)';
                        }
                    });
                });

                // Mostrar mensajes de éxito
                const successAlert = document.querySelector('.alert-success');
                if (successAlert) {
                    setTimeout(() => {
                        successAlert.style.opacity = '0';
                        successAlert.style.transition = 'opacity 0.5s';
                        setTimeout(() => successAlert.remove(), 500);
                    }, 3000);
                }
            });
        </script>
    }
</body>
</html>