@model IEnumerable<AgroTechApp.Models.DB.Potrero>

@{
    ViewData["Title"] = "Gestión de Potreros";
}

<div class="dashboard-container">
    <!-- Header -->
    <div class="dashboard-header">
        <div class="header-content">
            <div class="header-icon">
                <i class="fas fa-tractor"></i>
            </div>
            <div class="header-text">
                <h1>Gestión de Potreros</h1>
                <p>Administre y visualice todos los potreros del sistema</p>
            </div>
        </div>
        <div class="header-actions">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                Nuevo Potrero
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-map-marked-alt"></i>
            </div>
            <div class="stat-info">
                <h3>@Model.Count()</h3>
                <p>Total Potreros</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stat-info">
                <h3>@Model.Count(p => p.Activo)</h3>
                <p>Activos</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-ruler-combined"></i>
            </div>
            <div class="stat-info">
                <h3>@Model.Sum(p => p.Hectareas).ToString("F1")</h3>
                <p>Hectáreas Totales</p>
            </div>
        </div>
    </div>

    <!-- Search and Filters -->
    <div class="filters-section">
        <div class="search-box">
            <i class="fas fa-search"></i>
            <input type="text" id="searchInput" placeholder="Buscar potreros...">
        </div>
        <div class="filter-buttons">
            <button class="filter-btn active" data-filter="all">Todos</button>
            <button class="filter-btn" data-filter="active">Activos</button>
            <button class="filter-btn" data-filter="inactive">Inactivos</button>
        </div>
    </div>

    <!-- Potreros Table -->
    <div class="table-container">
        <div class="table-responsive">
            <table class="modern-table" id="potrerosTable">
                <thead>
                    <tr>
                        <th data-sort="nombre">
                            <div class="th-content">
                                <span>Nombre</span>
                                <i class="fas fa-sort"></i>
                            </div>
                        </th>
                        <th data-sort="hectareas">
                            <div class="th-content">
                                <span>Hectáreas</span>
                                <i class="fas fa-sort"></i>
                            </div>
                        </th>
                        <th data-sort="activo">
                            <div class="th-content">
                                <span>Estado</span>
                                <i class="fas fa-sort"></i>
                            </div>
                        </th>
                        <th data-sort="finca">
                            <div class="th-content">
                                <span>Finca</span>
                                <i class="fas fa-sort"></i>
                            </div>
                        </th>
                        <th class="actions-header">
                            <span>Acciones</span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="potrero-row" data-status="@(item.Activo ? "active" : "inactive")">
                            <td class="potrero-name">
                                <div class="name-content">
                                    <div class="name-icon">
                                        <i class="fas fa-map"></i>
                                    </div>
                                    <div>
                                        <strong>@Html.DisplayFor(modelItem => item.Nombre)</strong>
                                        <small>ID: @item.PotreroId</small>
                                    </div>
                                </div>
                            </td>
                            <td class="hectareas">
                                <div class="hectares-badge">
                                    <i class="fas fa-ruler"></i>
                                    @Html.DisplayFor(modelItem => item.Hectareas) ha
                                </div>
                            </td>
                            <td class="status">
                                <span class="status-badge @(item.Activo ? "active" : "inactive")">
                                    <i class="fas @(item.Activo ? "fa-check-circle" : "fa-times-circle")"></i>
                                    @(item.Activo ? "Activo" : "Inactivo")
                                </span>
                            </td>
                            <td class="finca">
                                <div class="finca-info">
                                    <i class="fas fa-farm"></i>
                                    Finca #@Html.DisplayFor(modelItem => item.Finca.FincaId)
                                </div>
                            </td>
                            <td class="actions">
                                <div class="action-buttons">
                                    <a asp-action="Edit" asp-route-id="@item.PotreroId" class="btn-action btn-edit" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.PotreroId" class="btn-action btn-details" title="Detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.PotreroId" class="btn-action btn-delete" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Empty State -->
        @if (!Model.Any())
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-tractor"></i>
                </div>
                <h3>No hay potreros registrados</h3>
                <p>Comience agregando el primer potrero al sistema</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    Crear Primer Potrero
                </a>
            </div>
        }
    </div>

    <!-- Mobile Cards View -->
    <div class="mobile-cards" id="mobileCards">
        @foreach (var item in Model)
        {
            <div class="potrero-card" data-status="@(item.Activo ? "active" : "inactive")">
                <div class="card-header">
                    <div class="card-title">
                        <i class="fas fa-map"></i>
                        <h4>@Html.DisplayFor(modelItem => item.Nombre)</h4>
                    </div>
                    <span class="status-badge @(item.Activo ? "active" : "inactive")">
                        @(item.Activo ? "Activo" : "Inactivo")
                    </span>
                </div>
                <div class="card-body">
                    <div class="card-info">
                        <div class="info-item">
                            <i class="fas fa-ruler-combined"></i>
                            <span>@Html.DisplayFor(modelItem => item.Hectareas) hectáreas</span>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-farm"></i>
                            <span>Finca #@Html.DisplayFor(modelItem => item.Finca.FincaId)</span>
                        </div>
                    </div>
                </div>
                <div class="card-actions">
                    <a asp-action="Edit" asp-route-id="@item.PotreroId" class="btn-action btn-edit">
                        <i class="fas fa-edit"></i>
                        Editar
                    </a>
                    <a asp-action="Details" asp-route-id="@item.PotreroId" class="btn-action btn-details">
                        <i class="fas fa-eye"></i>
                        Ver
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.PotreroId" class="btn-action btn-delete">
                        <i class="fas fa-trash"></i>
                        Eliminar
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Search functionality
            const searchInput = document.getElementById('searchInput');
            const potreroRows = document.querySelectorAll('.potrero-row');
            const potreroCards = document.querySelectorAll('.potrero-card');

            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();

                potreroRows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    row.style.display = text.includes(searchTerm) ? '' : 'none';
                });

                potreroCards.forEach(card => {
                    const text = card.textContent.toLowerCase();
                    card.style.display = text.includes(searchTerm) ? '' : 'none';
                });
            });

            // Filter functionality
            const filterButtons = document.querySelectorAll('.filter-btn');

            filterButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // Remove active class from all buttons
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    // Add active class to clicked button
                    this.classList.add('active');

                    const filter = this.dataset.filter;

                    potreroRows.forEach(row => {
                        if (filter === 'all' || row.dataset.status === filter) {
                            row.style.display = '';
                        } else {
                            row.style.display = 'none';
                        }
                    });

                    potreroCards.forEach(card => {
                        if (filter === 'all' || card.dataset.status === filter) {
                            card.style.display = '';
                        } else {
                            card.style.display = 'none';
                        }
                    });
                });
            });

            // Sort functionality
            const sortHeaders = document.querySelectorAll('th[data-sort]');
            let currentSort = { column: null, direction: 'asc' };

            sortHeaders.forEach(header => {
                header.addEventListener('click', function() {
                    const column = this.dataset.sort;
                    const rows = Array.from(potreroRows);
                    const cards = Array.from(potreroCards);

                    // Determine sort direction
                    if (currentSort.column === column) {
                        currentSort.direction = currentSort.direction === 'asc' ? 'desc' : 'asc';
                    } else {
                        currentSort.column = column;
                        currentSort.direction = 'asc';
                    }

                    // Sort rows and cards
                    rows.sort((a, b) => {
                        let aValue, bValue;

                        switch(column) {
                            case 'nombre':
                                aValue = a.querySelector('.potrero-name strong').textContent;
                                bValue = b.querySelector('.potrero-name strong').textContent;
                                break;
                            case 'hectareas':
                                aValue = parseFloat(a.querySelector('.hectareas').textContent);
                                bValue = parseFloat(b.querySelector('.hectareas').textContent);
                                break;
                            case 'activo':
                                aValue = a.dataset.status;
                                bValue = b.dataset.status;
                                break;
                            case 'finca':
                                aValue = a.querySelector('.finca').textContent;
                                bValue = b.querySelector('.finca').textContent;
                                break;
                        }

                        if (currentSort.direction === 'asc') {
                            return aValue > bValue ? 1 : -1;
                        } else {
                            return aValue < bValue ? 1 : -1;
                        }
                    });

                    // Reorder table rows
                    const tbody = document.querySelector('tbody');
                    rows.forEach(row => tbody.appendChild(row));

                    // Update sort indicators
                    sortHeaders.forEach(h => {
                        const icon = h.querySelector('i');
                        icon.className = 'fas fa-sort';
                    });

                    const currentIcon = this.querySelector('i');
                    currentIcon.className = currentSort.direction === 'asc' ?
                        'fas fa-sort-up' : 'fas fa-sort-down';
                });
            });

            // Hover effects
            const actionButtons = document.querySelectorAll('.btn-action');
            actionButtons.forEach(btn => {
                btn.addEventListener('mouseenter', function() {
                    this.style.transform = 'scale(1.1)';
                });

                btn.addEventListener('mouseleave', function() {
                    this.style.transform = 'scale(1)';
                });
            });

            // Responsive table/cards toggle
            function checkScreenSize() {
                const table = document.querySelector('.table-responsive');
                const mobileCards = document.getElementById('mobileCards');

                if (window.innerWidth < 768) {
                    table.style.display = 'none';
                    mobileCards.style.display = 'grid';
                } else {
                    table.style.display = 'block';
                    mobileCards.style.display = 'none';
                }
            }

            checkScreenSize();
            window.addEventListener('resize', checkScreenSize);
        });
    </script>
}

<style>
