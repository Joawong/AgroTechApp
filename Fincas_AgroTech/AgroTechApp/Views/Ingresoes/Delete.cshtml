@model AgroTechApp.Models.DB.Ingreso
@{
    ViewData["Title"] = "Eliminar Ingreso";
    bool esAutomatico = ViewBag.EsAutomatico != null ? (bool)ViewBag.EsAutomatico : false;
}

<style>
    .delete-card {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
        border-radius: 20px;
        background: white;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        font-family: 'Inter', sans-serif;
        animation: fadeIn .5s ease-out;
    }

    .danger-header {
        text-align: center;
        padding: 1.5rem;
        background: #dc3545;
        color: white;
        border-radius: 15px;
        margin-bottom: 1.5rem;
    }

        .danger-header h2 {
            margin: 0;
            font-size: 1.8rem;
        }

    .warning-box {
        background: #fff3cd;
        padding: 1rem;
        border-left: 4px solid #e0a800;
        border-radius: 10px;
        margin-bottom: 1.5rem;
        color: #856404;
        font-size: 1rem;
    }

    .detail-item {
        margin-bottom: .8rem;
        font-size: 1.1rem;
    }

    .actions {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn {
        padding: .8rem 1.6rem;
        border-radius: 12px;
        border: none;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: .5rem;
    }

    .btn-secondary {
        background: #ddd;
    }

    .btn-danger {
        background: #dc3545;
        color: white;
    }
</style>

<div class="delete-card">

    <div class="danger-header">
        <h2><i class="fas fa-exclamation-triangle"></i> Eliminar Ingreso</h2>
        <p>Esta acción no se puede deshacer</p>
    </div>

    @if (esAutomatico)
    {
        <div class="warning-box">
            <strong>Este ingreso fue generado automáticamente por el módulo:</strong> @ViewBag.OrigenModulo<br />
            No se puede eliminar manualmente.
        </div>

        <div class="actions">
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>

        return;
    }

    <div class="detail-item"><strong>Fecha:</strong> @Model.Fecha.ToShortDateString()</div>
    <div class="detail-item"><strong>Monto:</strong> ₡@Model.Monto.ToString("N2")</div>
    <div class="detail-item"><strong>Rubro:</strong> @Model.RubroIngreso?.Nombre</div>
    <div class="detail-item">
        <strong>Animal:</strong>
        @(Model.AnimalId != null ? Model.Animal.Arete : "No asignado")
    </div>

    <div class="warning-box">
        ¿Está seguro de que desea eliminar este ingreso?
        Esta acción es permanente.
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IngresoId" />

        <div class="actions">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times"></i> Cancelar
            </a>

            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Eliminar
            </button>
        </div>
    </form>
</div>
