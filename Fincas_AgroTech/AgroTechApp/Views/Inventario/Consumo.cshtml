@model AgroTechApp.ViewModels.ConsumoVM
@{
    ViewData["Title"] = "Registrar Consumo";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"] - AgroTech</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #dc3545;
            --primary-dark: #c82333;
            --primary-light: #e4606d;
            --light: #f8f9fa;
            --dark: #2C3E50;
            --gray: #6c757d;
            --border: #dee2e6;
            --shadow: rgba(0,0,0,.08);
            --success: #28a745;
            --warning: #ffc107;
            --danger: #dc3545;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            background: linear-gradient(135deg, #fff5f5 0%, #ffe8e8 100%);
            color: var(--dark);
            font-family: Inter, Segoe UI, Arial, sans-serif;
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
        }

        .form-card {
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 8px 30px var(--shadow);
            padding: 2rem;
        }

        .form-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid var(--light);
        }

        .form-title {
            font-size: 1.6rem;
            font-weight: 700;
            display: flex;
            gap: 12px;
            align-items: center;
        }

            .form-title i {
                background: linear-gradient(135deg, var(--primary), var(--primary-light));
                color: #fff;
                width: 44px;
                height: 44px;
                border-radius: 10px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

        .stock-badge {
            background: linear-gradient(135deg, var(--success), #20c997);
            color: #fff;
            padding: 0.6rem 1.2rem;
            border-radius: 10px;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .stock-badge.warning {
                background: linear-gradient(135deg, var(--warning), #fd7e14);
                color: #212529;
            }

            .stock-badge.danger {
                background: linear-gradient(135deg, var(--danger), #c82333);
            }

        .finca-info {
            background: linear-gradient(135deg, #e8f5e9, #c8e6c9);
            padding: 1rem;
            border-radius: 10px;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 600;
            color: #2E7D32;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1.2rem;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

            .form-group.full {
                grid-column: 1 / -1;
            }

        label {
            font-weight: 600;
            color: var(--dark);
            display: flex;
            align-items: center;
            gap: 6px;
        }

            label i {
                color: var(--primary);
                font-size: 0.9rem;
            }

        input, select, textarea {
            padding: 0.75rem 1rem;
            border: 2px solid var(--border);
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.2s;
        }

            input:focus, select:focus, textarea:focus {
                outline: none;
                border-color: var(--primary);
                box-shadow: 0 0 0 3px rgba(220,53,69,0.1);
            }

        textarea {
            resize: vertical;
            min-height: 80px;
        }

        .hint {
            font-size: 0.85rem;
            color: var(--gray);
            margin-top: 4px;
        }

        .actions {
            display: flex;
            gap: 1rem;
            margin-top: 1.5rem;
            padding-top: 1.5rem;
            border-top: 2px solid var(--light);
        }

        .btn {
            padding: 0.8rem 1.5rem;
            border: none;
            border-radius: 8px;
            font-weight: 700;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
            transition: all 0.2s;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary), var(--primary-light));
            color: #fff;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(220,53,69,0.3);
            }

        .btn-secondary {
            background: var(--light);
            color: var(--dark);
            border: 2px solid var(--border);
        }

            .btn-secondary:hover {
                background: var(--border);
            }

        .validation-summary-errors {
            background: #fff5f5;
            border: 1px solid #ffcdd2;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1rem;
            color: var(--danger);
        }

        .field-validation-error {
            color: var(--danger);
            font-size: 0.85rem;
        }

        @@media (max-width: 600px) {
            .form-grid {
                grid-template-columns: 1fr;
            }

            .form-header {
                flex-direction: column;
                gap: 1rem;
                align-items: flex-start;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-card">
            <div class="form-header">
                <div class="form-title">
                    <i class="fas fa-arrow-up-from-bracket"></i>
                    <span>Registrar Consumo</span>
                </div>
                <div class="stock-badge" id="stockBadge">
                    <i class="fas fa-boxes-stacked"></i>
                    <span>Stock: <strong id="stockValue">@(Model.StockDisponible?.ToString("N2") ?? "—")</strong></span>
                </div>
            </div>

            <form asp-action="Consumo" method="post" id="consumoForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="FincaId" />

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="validation-summary-errors">
                        <div asp-validation-summary="All"></div>
                    </div>
                }

                <div class="finca-info">
                    <i class="fas fa-warehouse"></i>
                    <span>Finca: @ViewData["FincaNombre"]</span>
                </div>

                <div class="form-grid">
                    <div class="form-group full">
                        <label asp-for="InsumoId"><i class="fas fa-box"></i> Insumo</label>
                        <select asp-for="InsumoId" asp-items="ViewBag.InsumoSelect" id="insumoSelect">
                            <option value="">-- Seleccione un insumo --</option>
                        </select>
                        <span asp-validation-for="InsumoId" class="field-validation-error"></span>
                        <div class="hint">Solo se muestran insumos activos con stock disponible</div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Cantidad"><i class="fas fa-balance-scale"></i> Cantidad</label>
                        <input asp-for="Cantidad" type="number" step="1" min="1" placeholder="Ejemplo. 5" />

                        <span asp-validation-for="Cantidad" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Fecha"><i class="fas fa-calendar"></i> Fecha</label>
                        <input asp-for="Fecha" type="date" />
                        <span asp-validation-for="Fecha" class="field-validation-error"></span>
                    </div>

                    <div class="form-group full">
                        <label asp-for="Observaciones"><i class="fas fa-comment"></i> Observaciones</label>
                        <textarea asp-for="Observaciones" placeholder="Ej. Aplicado al lote norte, tratamiento preventivo..."></textarea>
                        <span asp-validation-for="Observaciones" class="field-validation-error"></span>
                    </div>
                </div>

                <div class="actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i> Registrar Consumo
                    </button>
                    <a asp-controller="Insumoes" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const fechaInput = document.getElementById('Fecha');
            if (fechaInput && !fechaInput.value) {
                const today = new Date().toISOString().split('T')[0];
                fechaInput.value = today;
            }

            const insumoSelect = document.getElementById('insumoSelect');
            const stockBadge = document.getElementById('stockBadge');
            const stockValue = document.getElementById('stockValue');

            insumoSelect.addEventListener('change', async function() {
                const insumoId = this.value;
                if (!insumoId) {
                    stockValue.textContent = '—';
                    return;
                }
                try {
                    const res = await fetch(`/Inventario/Stock?insumoId=${insumoId}`);
                    const data = await res.json();
                    const stock = data.stock || 0;
                    stockValue.textContent = stock.toLocaleString('es-ES', {minimumFractionDigits: 2});

                    stockBadge.classList.remove('warning', 'danger');
                    if (stock === 0) stockBadge.classList.add('danger');
                    else if (stock < 10) stockBadge.classList.add('warning');
                } catch (e) {
                    stockValue.textContent = 'Error';
                }
            });
        });
    </script>
</body>
</html>