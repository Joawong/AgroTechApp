@{
    ViewData["Title"] = "Dashboard de Inventario";
    var stock = ViewBag.StockPorInsumo as Dictionary<long, decimal> ?? new();
    var insumos = ViewBag.Insumos as List<AgroTechApp.Models.DB.Insumo> ?? new();
    var movimientos = ViewBag.UltimosMovimientos as List<AgroTechApp.Models.DB.MovimientoInventario> ?? new();
    var bajoStock = ViewBag.InsumosBajoStock as dynamic ?? new List<dynamic>();

    int kActivos = ViewBag.TotalActivos ?? 0;
    int kBajo = ViewBag.PorAcabarse ?? 0;
    int kAgotados = ViewBag.Agotados ?? 0;
    int kCategorias = ViewBag.Categorias ?? 0;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"] - AgroTech</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #2E8B57;
            --primary-dark: #26734d;
            --light: #f8f9fa;
            --dark: #2C3E50;
            --gray: #6c757d;
            --border: #dee2e6;
            --shadow: rgba(0,0,0,.08);
            --success: #28a745;
            --warning: #ffc107;
            --danger: #dc3545;
            --info: #17a2b8;
        }

        * {
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg,#f5f7fa 0%,#e3f2fd 100%);
            color: var(--dark);
            font-family: Inter, Segoe UI, Arial, sans-serif;
            padding: 20px;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
            flex-wrap: wrap;
            gap: 12px;
        }

        .page-title {
            font-size: 28px;
            font-weight: 800;
            display: flex;
            gap: 10px;
            align-items: center;
        }

            .page-title i {
                color: var(--primary);
            }

        .page-actions {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .btn {
            padding: .6rem 1rem;
            border: none;
            border-radius: 8px;
            font-weight: 700;
            display: inline-flex;
            gap: .5rem;
            align-items: center;
            cursor: pointer;
            text-decoration: none;
        }

        .btn-primary {
            background: var(--primary);
            color: #fff;
        }

            .btn-primary:hover {
                background: var(--primary-dark);
            }

        .btn-danger {
            background: var(--danger);
            color: #fff;
        }

        .btn-outline {
            background: #fff;
            border: 1px solid var(--primary);
            color: var(--primary);
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 16px;
            margin-bottom: 24px;
        }

        .stat-card {
            background: #fff;
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 4px 16px var(--shadow);
            display: flex;
            gap: 16px;
            align-items: center;
        }

        .stat-icon {
            width: 56px;
            height: 56px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            font-size: 22px;
        }

            .stat-icon.primary {
                background: linear-gradient(135deg, #3CB371, var(--primary));
            }

            .stat-icon.warning {
                background: linear-gradient(135deg, #FFD166, var(--warning));
            }

            .stat-icon.danger {
                background: linear-gradient(135deg, #FF9E7D, var(--danger));
            }

            .stat-icon.info {
                background: linear-gradient(135deg, #118AB2, #2A9FD6);
            }

        .stat-value {
            font-size: 1.8rem;
            font-weight: 800;
        }

        .stat-label {
            color: var(--gray);
            font-size: 0.9rem;
        }

        .grid-2 {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 24px;
        }

        .card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 16px var(--shadow);
            overflow: hidden;
        }

        .card-header {
            padding: 16px 20px;
            border-bottom: 1px solid var(--border);
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .card-header i {
                color: var(--primary);
            }

        .card-body {
            padding: 16px 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px 12px;
            text-align: left;
            border-bottom: 1px solid var(--border);
        }

        th {
            background: var(--light);
            font-weight: 700;
        }

        .badge {
            padding: 4px 10px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
        }

        .badge-success {
            background: #d4edda;
            color: #155724;
        }

        .badge-warning {
            background: #fff3cd;
            color: #856404;
        }

        .badge-danger {
            background: #f8d7da;
            color: #721c24;
        }

        .badge-info {
            background: #d1ecf1;
            color: #0c5460;
        }

        .alert-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .alert-item {
            padding: 12px;
            border-bottom: 1px solid var(--border);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .alert-item:last-child {
                border-bottom: none;
            }

            .alert-item.danger {
                background: #fff5f5;
            }

            .alert-item.warning {
                background: #fffdf5;
            }

        @@media (max-width: 900px) {
            .grid-2 {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="page-header">
            <div class="page-title">
                <i class="fas fa-chart-pie"></i> Dashboard de Inventario
            </div>
            <div class="page-actions">
                <a asp-controller="Inventario" asp-action="Historial" class="btn btn-outline">
                    <i class="fas fa-history"></i> Ver Historial
                </a>
            </div>
        </div>

        <!-- KPIs -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon primary"><i class="fas fa-box"></i></div>
                <div>
                    <div class="stat-value">@kActivos</div>
                    <div class="stat-label">Insumos Activos</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon warning"><i class="fas fa-exclamation-triangle"></i></div>
                <div>
                    <div class="stat-value">@kBajo</div>
                    <div class="stat-label">Stock Bajo</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon danger"><i class="fas fa-times-circle"></i></div>
                <div>
                    <div class="stat-value">@kAgotados</div>
                    <div class="stat-label">Agotados</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon info"><i class="fas fa-tags"></i></div>
                <div>
                    <div class="stat-value">@kCategorias</div>
                    <div class="stat-label">Categorías</div>
                </div>
            </div>
        </div>

        <div class="grid-2">
            <!-- Alertas de Stock -->
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-bell"></i> Alertas de Stock
                </div>
                <div class="card-body" style="padding: 0;">
                    @if (bajoStock != null && ((IEnumerable<dynamic>)bajoStock).Any())
                    {
                        <ul class="alert-list">
                            @foreach (var item in (IEnumerable<dynamic>)bajoStock)
                            {
                                var insumo = item.Insumo;
                                decimal stockVal = item.Stock;
                                var alertClass = stockVal == 0 ? "danger" : "warning";
                                <li class="alert-item @alertClass">
                                    <div>
                                        <strong>@insumo.Nombre</strong>
                                        <div style="font-size: 0.85rem; color: var(--gray);">
                                            Stock: @stockVal.ToString("N2") @insumo.Unidad?.Codigo
                                            (Mín: @insumo.StockMinimo)
                                        </div>
                                    </div>
                                    <a asp-controller="Inventario" asp-action="Entrada"
                                       asp-route-insumoId="@insumo.InsumoId" class="btn btn-primary" style="padding: 6px 12px;">
                                        <i class="fas fa-plus"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div style="padding: 20px; text-align: center; color: var(--gray);">
                            <i class="fas fa-check-circle" style="font-size: 2rem; color: var(--success);"></i>
                            <p>Todo el inventario está en niveles óptimos</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Últimos Movimientos -->
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-history"></i> Últimos Movimientos
                </div>
                <div class="card-body" style="padding: 0; overflow-x: auto;">
                    <table>
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Insumo</th>
                                <th>Tipo</th>
                                <th>Cantidad</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var m in movimientos.Take(8))
                            {
                                var badgeClass = m.Tipo?.Nombre == "Entrada" ? "badge-success" :
                                m.Tipo?.Nombre == "Consumo" ? "badge-danger" : "badge-info";
                                <tr>
                                    <td>@m.Fecha.ToString("dd/MM/yy")</td>
                                    <td>@m.Insumo?.Nombre</td>
                                    <td><span class="badge @badgeClass">@m.Tipo?.Nombre</span></td>
                                    <td>@m.Cantidad.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>