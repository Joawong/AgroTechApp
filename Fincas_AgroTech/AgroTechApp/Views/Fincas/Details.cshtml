@model AgroTechApp.Models.DB.Finca

@{
    ViewData["Title"] = "Detalles de Finca";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0 mb-4">
                <div class="card-header bg-gradient-success text-white py-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-landmark fa-2x me-3"></i>
                        <div>
                            <h1 class="h3 mb-0">Detalles de Finca</h1>
                            <p class="mb-0 opacity-75">Información completa de la finca registrada</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5">
                    <div class="row mb-5">
                        <div class="col-md-12">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-light p-3 rounded-circle me-3">
                                    <i class="fas fa-signature fa-2x text-primary"></i>
                                </div>
                                <div>
                                    <h2 class="h4 text-dark fw-bold mb-0">@Model.Nombre</h2>
                                    <p class="text-muted mb-0">Nombre de la finca</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-5">
                        <div class="col-md-12">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-light p-3 rounded-circle me-3">
                                    <i class="fas fa-map-marker-alt fa-2x text-info"></i>
                                </div>
                                <div>
                                    <h3 class="h5 text-dark fw-bold mb-1">Ubicación</h3>
                                    <p class="lead mb-0">@Model.Ubicacion</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-5">
                        <div class="col-md-12">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-light p-3 rounded-circle me-3">
                                    <i class="fas fa-power-off fa-2x text-warning"></i>
                                </div>
                                <div>
                                    <h3 class="h5 text-dark fw-bold mb-1">Estado</h3>
                                    <span class="badge @(Model.Activa ? "bg-success" : "bg-danger") px-3 py-2 fs-6">
                                        @if (Model.Activa)
                                        {
                                            <i class="fas fa-check-circle me-1"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-times-circle me-1"></i>
                                        }
                                        @(Model.Activa ? "Activa" : "Inactiva")
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-light py-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Edit" asp-route-id="@Model.FincaId" class="btn btn-warning btn-lg px-4 py-3 fw-bold">
                            <i class="fas fa-edit me-2"></i>Editar Finca
                        </a>

                        <a asp-action="Index" class="btn btn-danger px-4 py-3 fw-bold">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                        </a>
                    </div>
                </div>
            </div>

            <!-- Tarjeta de información -->
            <div class="card border-info mt-4">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-chart-line text-info fa-2x"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="card-title text-info">Gestión de Fincas</h5>
                            <p class="card-text mb-0">
                                Desde esta vista puede editar la información de la finca o regresar al listado completo.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        .bg-gradient-success {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        }

        .card {
            border-radius: 15px;
            overflow: hidden;
        }

        .rounded-circle {
            border-radius: 50% !important;
        }

        .bg-light {
            background-color: #f8f9fa !important;
        }

        .btn-warning {
            background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
            border: none;
            border-radius: 10px;
            transition: all 0.3s ease;
            color: #212529;
        }

            .btn-warning:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(255, 193, 7, 0.3);
                color: #212529;
            }

        .btn-danger {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            border: none;
            border-radius: 10px;
            transition: all 0.3s ease;
            color: white;
        }

            .btn-danger:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(220, 53, 69, 0.3);
                color: white;
                background: linear-gradient(135deg, #c82333 0%, #bd2130 100%);
            }

        .badge {
            border-radius: 20px;
            font-size: 1rem;
            padding: 0.5rem 1.5rem;
        }

            .badge.bg-success {
                background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important;
            }

            .badge.bg-danger {
                background: linear-gradient(135deg, #dc3545 0%, #c82333 100%) !important;
            }
    </style>
}