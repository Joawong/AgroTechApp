@model AgroTechApp.Models.DB.Finca

@{
    ViewData["Title"] = "Editar Finca";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-header bg-gradient-warning text-white py-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-edit fa-2x me-3"></i>
                        <div>
                            <h1 class="h3 mb-0">Editar Finca</h1>
                            <p class="mb-0 opacity-75">Modifique los datos de la finca según sea necesario</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4 p-lg-5">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="FincaId" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-12 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Nombre" class="form-control form-control-lg"
                                           placeholder="Nombre de la finca"
                                           style="border-left: 4px solid #28a745;" />
                                    <label asp-for="Nombre" class="form-label">
                                        <i class="fas fa-signature me-2 text-primary"></i>Nombre de la Finca
                                    </label>
                                    <span asp-validation-for="Nombre" class="text-danger small mt-1 d-block"></span>
                                    <div class="form-text">Ejemplo: Finca La Esperanza, Hacienda San José</div>
                                </div>
                            </div>

                            <div class="col-md-12 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Ubicacion" class="form-control form-control-lg"
                                           placeholder="Ubicación geográfica"
                                           style="border-left: 4px solid #17a2b8;" />
                                    <label asp-for="Ubicacion" class="form-label">
                                        <i class="fas fa-map-marker-alt me-2 text-info"></i>Ubicación
                                    </label>
                                    <span asp-validation-for="Ubicacion" class="text-danger small mt-1 d-block"></span>
                                    <div class="form-text">Dirección completa, ciudad o coordenadas</div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-5 pt-4 border-top">
                            <a asp-action="Index" class="btn btn-danger px-4">
                                <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                            </a>

                            <button type="submit" class="btn btn-warning btn-lg px-5 py-3 fw-bold">
                                <i class="fas fa-save me-2"></i>Actualizar Finca
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer bg-light py-3">
                    <div class="text-center text-muted small">
                        <i class="fas fa-exclamation-triangle me-1"></i>
                        Asegúrese de verificar la información antes de guardar los cambios
                    </div>
                </div>
            </div>

            <!-- Tarjeta informativa -->
            <div class="card border-info mt-4">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-lightbulb text-info fa-2x"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="card-title text-info">Importante</h5>
                            <p class="card-text mb-0">
                                Los cambios realizados aquí se aplicarán inmediatamente a la finca seleccionada.
                                Verifique que toda la información sea correcta antes de guardar.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        .bg-gradient-warning {
            background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
        }

        .card {
            border-radius: 15px;
            overflow: hidden;
        }

        .form-control-lg {
            border-radius: 10px;
            padding: 1rem 1.5rem;
            font-size: 1.1rem;
        }

        .form-control:focus {
            box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.25);
            border-color: #ffc107;
        }

        .btn-warning {
            background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
            border: none;
            border-radius: 10px;
            transition: all 0.3s ease;
            color: #212529;
        }

            .btn-warning:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(255, 193, 7, 0.3);
                color: #212529;
            }

        .btn-danger {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            border: none;
            border-radius: 10px;
            padding: 0.75rem 1.5rem;
            transition: all 0.3s ease;
            color: white;
        }

            .btn-danger:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(220, 53, 69, 0.3);
                color: white;
                background: linear-gradient(135deg, #c82333 0%, #bd2130 100%);
            }

        .form-floating > .form-control {
            height: calc(3.5rem + 2px);
            line-height: 1.25;
        }

        .form-floating > label {
            padding: 1rem 1.5rem;
        }
    </style>
}