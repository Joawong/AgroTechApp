@model IEnumerable<AgroTechApp.Models.DB.Insumo>
@{
    ViewData["Title"] = "Gestión de Insumos";
    // Helpers locales
    var stock = ViewBag.StockPorInsumo as Dictionary<long, decimal> ?? new();
    decimal S(long id) => stock.TryGetValue(id, out var s) ? s : 0m;

    // Filtros actuales
    long? selFinca = ViewBag?.FincaId?.SelectedValue as long?;
    int? selCat = ViewBag?.CategoriaId?.SelectedValue as int?;
    string selEst = ViewBag?.Estado as string ?? "";
    string q = ViewBag?.Q as string ?? "";

    int kTotal = ViewBag.TotalActivos ?? 0;
    int kBajo = ViewBag.PorAcabarse ?? 0;
    int kAgotados = ViewBag.Agotados ?? 0;
    int kCategorias = ViewBag.Categorias ?? 0;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"] - AgroTech</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #2E8B57;
            --primary-dark: #26734d;
            --primary-light: #3CB371;
            --light: #f8f9fa;
            --dark: #2C3E50;
            --gray: #6c757d;
            --border: #dee2e6;
            --shadow: rgba(0,0,0,.08);
            --shadow-hover: rgba(0,0,0,.15);
            --success: #28a745;
            --warning: #ffc107;
            --danger: #dc3545;
        }

        * {
            box-sizing: border-box
        }

        body {
            background: linear-gradient(135deg,#f5f7fa 0%,#e3f2fd 100%);
            color: var(--dark);
            font-family: Inter, Segoe UI, Arial, sans-serif;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 24px 0;
            gap: 12px;
            flex-wrap: wrap;
        }

        .page-title {
            font-size: 28px;
            font-weight: 800;
            display: flex;
            gap: 10px;
            align-items: center
        }

            .page-title i {
                color: var(--primary)
            }

        .page-actions {
            display: flex;
            gap: 10px;
            flex-wrap: wrap
        }

        .btn {
            padding: .6rem 1rem;
            border: none;
            border-radius: 8px;
            font-weight: 700;
            display: inline-flex;
            gap: .5rem;
            align-items: center;
            cursor: pointer;
            text-decoration: none
        }

        .btn-primary {
            background: var(--primary);
            color: #fff
        }

            .btn-primary:hover {
                background: var(--primary-dark)
            }

        .btn-outline {
            background: #fff;
            border: 1px solid var(--primary);
            color: var(--primary)
        }

            .btn-outline:hover {
                background: var(--primary);
                color: #fff
            }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit,minmax(220px,1fr));
            gap: 16px;
            margin-bottom: 20px
        }

        .stat-card {
            background: #fff;
            border-radius: 12px;
            padding: 16px;
            box-shadow: 0 4px 16px var(--shadow);
            display: flex;
            gap: 14px;
            align-items: center
        }

        .stat-icon {
            width: 54px;
            height: 54px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            font-size: 20px
        }

            .stat-icon.primary {
                background: linear-gradient(135deg,var(--primary-light),var(--primary))
            }

            .stat-icon.warning {
                background: linear-gradient(135deg,#FFD166,var(--warning))
            }

            .stat-icon.danger {
                background: linear-gradient(135deg,#FF9E7D,var(--danger))
            }

            .stat-icon.info {
                background: linear-gradient(135deg,#118AB2,#2A9FD6)
            }

        .filters {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 16px var(--shadow);
            padding: 16px;
            margin-bottom: 18px
        }

            .filters form {
                display: grid;
                grid-template-columns: repeat(5,1fr);
                gap: 10px;
                align-items: end
            }

            .filters .field {
                display: flex;
                flex-direction: column;
                gap: 6px
            }

            .filters select, .filters input {
                padding: .6rem .8rem;
                border: 1px solid var(--border);
                border-radius: 8px
            }

        .table-card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 20px var(--shadow)
        }

        .table-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 16px;
            border-bottom: 1px solid var(--border)
        }

        .table-container {
            overflow-x: auto
        }

        table {
            width: 100%;
            border-collapse: collapse
        }

        th {
            background: var(--light);
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid var(--border);
            font-weight: 700
        }

        td {
            padding: 12px;
            border-bottom: 1px solid var(--border)
        }

        .status {
            padding: .25rem .6rem;
            border-radius: 999px;
            font-size: .75rem;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: .4px;
            display: inline-block
        }

        .ok {
            background: #d4edda;
            color: #155724
        }

        .low {
            background: #fff3cd;
            color: #856404
        }

        .zero {
            background: #f8d7da;
            color: #721c24
        }

        .off {
            background: #e2e3e5;
            color: #383d41
        }

        .row-actions {
            display: flex;
            gap: 6px;
            flex-wrap: wrap
        }

        .btn-sm {
            padding: .35rem .6rem;
            border-radius: 6px;
            font-weight: 700
        }

        .btn-success {
            background: var(--success);
            color: #fff
        }

        .btn-warning {
            background: var(--warning);
            color: #212529
        }

        .btn-danger {
            background: var(--danger);
            color: #fff
        }
        @@media (max-width: 992px) {
            .filters form

        {
            grid-template-columns: repeat(2,1fr)
        }

        }
        @@media (max-width: 560px) {
            .filters form

        {
            grid-template-columns: 1fr
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="admin-card">
            <!-- Header -->
            <div class="admin-header">
                <i class="fas fa-boxes admin-header-icon"></i>
                <h1><i class="fas fa-boxes"></i> Gestión de Insumos</h1>
                <p>Administre el inventario de insumos y productos veterinarios</p>
            </div>

            <!-- Body -->
            <div class="admin-body">
                <!-- Header Actions -->
                <div class="header-actions">
                    <div class="header-title">
                        <h2>Lista de Insumos</h2>
                        <p id="totalCount">Total: @Model.Count() insumos</p>
                    </div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus-circle"></i>
                        Registrar Nuevo Insumo
                    </a>
                </div>

                <!-- Stats Cards -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <i class="fas fa-box stat-icon icon-primary"></i>
                        <div class="stat-number">@ViewBag.TotalActivos</div>
                        <div class="stat-label">Insumos Activos</div>
                    </div>

                    <div class="stat-card" style="border-left-color: #ffc107;">
                        <i class="fas fa-exclamation-triangle stat-icon" style="color: #ffc107; background: rgba(255, 193, 7, 0.1);"></i>
                        <div class="stat-number">@ViewBag.PorAcabarse</div>
                        <div class="stat-label">Por Acabarse</div>
                    </div>

                    <div class="stat-card" style="border-left-color: #dc3545;">
                        <i class="fas fa-times-circle stat-icon" style="color: #dc3545; background: rgba(220, 53, 69, 0.1);"></i>
                        <div class="stat-number">@ViewBag.Agotados</div>
                        <div class="stat-label">Agotados</div>
                    </div>

                    <div class="stat-card" style="border-left-color: #17a2b8;">
                        <i class="fas fa-tags stat-icon" style="color: #17a2b8; background: rgba(23, 162, 184, 0.1);"></i>
                        <div class="stat-number">@ViewBag.Categorias</div>
                        <div class="stat-label">Categorías</div>
                    </div>
                </div>

                <!-- Search & Filters -->
                <div class="search-filter-container">
                    <div class="filter-row">
                        <input type="text"
                               id="searchInput"
                               class="search-input"
                               placeholder="🔍 Buscar por nombre...">

                        <select id="categoriaFilter" class="filter-select">
                            <option value="">📁 Todas las categorías</option>
                            @if (ViewBag.CategoriaId != null)
                            {
                                @foreach (var cat in ViewBag.CategoriaId as SelectList)
                                {
                                    <option value="@cat.Value">@cat.Text</option>
                                }
                            }
                        </select>

                        <select id="stockFilter" class="filter-select">
                            <option value="">📊 Todos los stocks</option>
                            <option value="ok">✅ Stock OK</option>
                            <option value="bajo">⚠️ Stock Bajo</option>
                            <option value="agotado">❌ Agotado</option>
                        </select>

                        <select id="estadoFilter" class="filter-select">
                            <option value="">🔘 Todos los estados</option>
                            <option value="activo">✅ Activos</option>
                            <option value="inactivo">⭕ Inactivos</option>
                        </select>
                    </div>
                </div>

                <!-- Table -->
                <div class="table-wrapper">
                    <div class="table-container">
                        @if (Model.Any())
                        {
                            <table>
                                <thead>
                                    <tr>
                                        <th><i class="fas fa-tag"></i> Nombre</th>
                                        <th><i class="fas fa-folder"></i> Categoría</th>
                                        <th><i class="fas fa-ruler"></i> Unidad</th>
                                        <th><i class="fas fa-boxes"></i> Stock Actual</th>
                                        <th><i class="fas fa-exclamation-triangle"></i> Stock Mínimo</th>
                                        <th><i class="fas fa-traffic-light"></i> Estado Stock</th>
                                        <th><i class="fas fa-toggle-on"></i> Activo</th>
                                        <th><i class="fas fa-cogs"></i> Acciones</th>
                                    </tr>
                                </thead>
                                <tbody id="tableBody">
                                    @{
                                        var stock = ViewBag.StockPorInsumo as Dictionary<long, decimal> ?? new Dictionary<long, decimal>();
                                    }
                                    @foreach (var item in Model)
                                    {
                                        var stockActual = stock.ContainsKey(item.InsumoId) ? stock[item.InsumoId] : 0m;
                                        var estadoStock = stockActual == 0 ? "agotado" :
                                        stockActual < item.StockMinimo ? "bajo" : "ok";
                                        var estadoActivo = item.Activo ? "activo" : "inactivo";

                                        <tr class="item-row"
                                            data-nombre="@item.Nombre.ToLower()"
                                            data-categoria="@item.CategoriaId"
                                            data-stock="@estadoStock"
                                            data-estado="@estadoActivo">

                                            <td><strong>@item.Nombre</strong></td>
                                            <td>@(item.Categoria?.Nombre ?? "-")</td>
                                            <td>@(item.Unidad?.Nombre ?? "-")</td>
                                            <td><strong>@stockActual.ToString("N2")</strong></td>
                                            <td>@item.StockMinimo.ToString("N2")</td>
                                            <td>
                                                @if (estadoStock == "ok")
                                                {
                                                    <span class="status-badge status-active">
                                                        <i class="fas fa-check-circle"></i> OK
                                                    </span>
                                                }
                                                else if (estadoStock == "bajo")
                                                {
                                                    <span class="status-badge" style="background: linear-gradient(135deg, #fff3cd, #ffe69c); color: #856404;">
                                                        <i class="fas fa-exclamation-triangle"></i> Bajo
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="status-badge" style="background: linear-gradient(135deg, #f8d7da, #f5c6cb); color: #721c24;">
                                                        <i class="fas fa-times-circle"></i> Agotado
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.Activo)
                                                {
                                                    <span class="status-badge status-active">
                                                        <i class="fas fa-check"></i> Sí
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="status-badge" style="background: #e2e3e5; color: #383d41;">
                                                        <i class="fas fa-times"></i> No
                                                    </span>
                                                }
                                            </td>
                                            <td class="actions-column">
                                                <div class="actions-group">
                                                    <a asp-action="Details" asp-route-id="@item.InsumoId"
                                                       class="btn btn-info btn-sm" title="Ver detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.InsumoId"
                                                       class="btn btn-warning btn-sm" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.InsumoId"
                                                       class="btn btn-danger btn-sm" title="Eliminar">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="empty-state">
                                <div class="empty-state-icon">
                                    <i class="fas fa-boxes"></i>
                                </div>
                                <h3>No hay insumos registrados</h3>
                                <p>Comience registrando el primer insumo del inventario.</p>
                                <a asp-action="Create" class="btn btn-primary btn-lg">
                                    <i class="fas fa-plus-circle"></i> Registrar Primer Insumo
                                </a>
                            </div>
                        }
                    </div>

                    <!-- Table Footer -->
                    @if (Model.Any())
                    {
                        <div class="table-footer">
                            <div class="pagination-info">
                                Mostrando <span id="visibleCount">@Model.Count()</span> de @Model.Count() insumos
                            </div>
                            <div class="export-actions">
                                <a href="#" class="btn-export" onclick="exportToCSV(); return false;">
                                    <i class="fas fa-file-export"></i> Exportar CSV
                                </a>
                                <a href="#" class="btn-export" onclick="window.print(); return false;">
                                    <i class="fas fa-print"></i> Imprimir
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const searchInput = document.getElementById('searchInput');
            const categoriaFilter = document.getElementById('categoriaFilter');
            const stockFilter = document.getElementById('stockFilter');
            const estadoFilter = document.getElementById('estadoFilter');
            const rows = document.querySelectorAll('.item-row');
            const visibleCount = document.getElementById('visibleCount');

            function filterTable() {
                const searchTerm = searchInput.value.toLowerCase();
                const categoriaValue = categoriaFilter.value;
                const stockValue = stockFilter.value;
                const estadoValue = estadoFilter.value;

                let visible = 0;

                rows.forEach(row => {
                    const nombre = row.getAttribute('data-nombre') || '';
                    const categoria = row.getAttribute('data-categoria') || '';
                    const stock = row.getAttribute('data-stock') || '';
                    const estado = row.getAttribute('data-estado') || '';

                    const matchesSearch = !searchTerm || nombre.includes(searchTerm);
                    const matchesCategoria = !categoriaValue || categoria === categoriaValue;
                    const matchesStock = !stockValue || stock === stockValue;
                    const matchesEstado = !estadoValue || estado === estadoValue;

                    if (matchesSearch && matchesCategoria && matchesStock && matchesEstado) {
                        row.style.display = '';
                        visible++;
                    } else {
                        row.style.display = 'none';
                    }
                });

                if (visibleCount) {
                    visibleCount.textContent = visible;
                }
            }

            searchInput.addEventListener('input', filterTable);
            categoriaFilter.addEventListener('change', filterTable);
            stockFilter.addEventListener('change', filterTable);
            estadoFilter.addEventListener('change', filterTable);

            filterTable();
        });

        function exportToCSV() {
            const rows = document.querySelectorAll('.item-row:not([style*="display: none"])');
            let csvContent = "data:text/csv;charset=utf-8,";
            csvContent += "Nombre,Categoría,Unidad,Stock Actual,Stock Mínimo,Estado Stock,Activo\n";

            rows.forEach(row => {
                const cells = row.querySelectorAll('td');
                const nombre = cells[0].textContent.trim();
                const categoria = cells[1].textContent.trim();
                const unidad = cells[2].textContent.trim();
                const stockActual = cells[3].textContent.trim();
                const stockMinimo = cells[4].textContent.trim();
                const estadoStock = cells[5].textContent.trim();
                const activo = cells[6].textContent.trim();

                csvContent += `"${nombre}","${categoria}","${unidad}","${stockActual}","${stockMinimo}","${estadoStock}","${activo}"\n`;
            });

            const encodedUri = encodeURI(csvContent);
            const link = document.createElement("a");
            link.setAttribute("href", encodedUri);
            link.setAttribute("download", "insumos_agrotech.csv");
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
    </script>
</body>
</html>
