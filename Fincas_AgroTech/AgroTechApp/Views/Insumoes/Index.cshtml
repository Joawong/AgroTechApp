@model IEnumerable<AgroTechApp.Models.DB.Insumo>
@{
    ViewData["Title"] = "Gestión de Insumos";
    // Helpers locales
    var stock = ViewBag.StockPorInsumo as Dictionary<long, decimal> ?? new();
    decimal S(long id) => stock.TryGetValue(id, out var s) ? s : 0m;

    // Filtros actuales
    long? selFinca = ViewBag?.FincaId?.SelectedValue as long?;
    int? selCat = ViewBag?.CategoriaId?.SelectedValue as int?;
    string selEst = ViewBag?.Estado as string ?? "";
    string q = ViewBag?.Q as string ?? "";

    int kTotal = ViewBag.TotalActivos ?? 0;
    int kBajo = ViewBag.PorAcabarse ?? 0;
    int kAgotados = ViewBag.Agotados ?? 0;
    int kCategorias = ViewBag.Categorias ?? 0;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"] - AgroTech</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #2E8B57;
            --primary-dark: #26734d;
            --primary-light: #3CB371;
            --light: #f8f9fa;
            --dark: #2C3E50;
            --gray: #6c757d;
            --border: #dee2e6;
            --shadow: rgba(0,0,0,.08);
            --shadow-hover: rgba(0,0,0,.15);
            --success: #28a745;
            --warning: #ffc107;
            --danger: #dc3545;
        }

        * {
            box-sizing: border-box
        }

        body {
            background: linear-gradient(135deg,#f5f7fa 0%,#e3f2fd 100%);
            color: var(--dark);
            font-family: Inter, Segoe UI, Arial, sans-serif;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 24px 0;
            gap: 12px;
            flex-wrap: wrap;
        }

        .page-title {
            font-size: 28px;
            font-weight: 800;
            display: flex;
            gap: 10px;
            align-items: center
        }

            .page-title i {
                color: var(--primary)
            }

        .page-actions {
            display: flex;
            gap: 10px;
            flex-wrap: wrap
        }

        .btn {
            padding: .6rem 1rem;
            border: none;
            border-radius: 8px;
            font-weight: 700;
            display: inline-flex;
            gap: .5rem;
            align-items: center;
            cursor: pointer;
            text-decoration: none
        }

        .btn-primary {
            background: var(--primary);
            color: #fff
        }

            .btn-primary:hover {
                background: var(--primary-dark)
            }

        .btn-outline {
            background: #fff;
            border: 1px solid var(--primary);
            color: var(--primary)
        }

            .btn-outline:hover {
                background: var(--primary);
                color: #fff
            }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit,minmax(220px,1fr));
            gap: 16px;
            margin-bottom: 20px
        }

        .stat-card {
            background: #fff;
            border-radius: 12px;
            padding: 16px;
            box-shadow: 0 4px 16px var(--shadow);
            display: flex;
            gap: 14px;
            align-items: center
        }

        .stat-icon {
            width: 54px;
            height: 54px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            font-size: 20px
        }

            .stat-icon.primary {
                background: linear-gradient(135deg,var(--primary-light),var(--primary))
            }

            .stat-icon.warning {
                background: linear-gradient(135deg,#FFD166,var(--warning))
            }

            .stat-icon.danger {
                background: linear-gradient(135deg,#FF9E7D,var(--danger))
            }

            .stat-icon.info {
                background: linear-gradient(135deg,#118AB2,#2A9FD6)
            }

        .filters {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 16px var(--shadow);
            padding: 16px;
            margin-bottom: 18px
        }

            .filters form {
                display: grid;
                grid-template-columns: repeat(5,1fr);
                gap: 10px;
                align-items: end
            }

            .filters .field {
                display: flex;
                flex-direction: column;
                gap: 6px
            }

            .filters select, .filters input {
                padding: .6rem .8rem;
                border: 1px solid var(--border);
                border-radius: 8px
            }

        .table-card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 20px var(--shadow)
        }

        .table-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 16px;
            border-bottom: 1px solid var(--border)
        }

        .table-container {
            overflow-x: auto
        }

        table {
            width: 100%;
            border-collapse: collapse
        }

        th {
            background: var(--light);
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid var(--border);
            font-weight: 700
        }

        td {
            padding: 12px;
            border-bottom: 1px solid var(--border)
        }

        .status {
            padding: .25rem .6rem;
            border-radius: 999px;
            font-size: .75rem;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: .4px;
            display: inline-block
        }

        .ok {
            background: #d4edda;
            color: #155724
        }

        .low {
            background: #fff3cd;
            color: #856404
        }

        .zero {
            background: #f8d7da;
            color: #721c24
        }

        .off {
            background: #e2e3e5;
            color: #383d41
        }

        .row-actions {
            display: flex;
            gap: 6px;
            flex-wrap: wrap
        }

        .btn-sm {
            padding: .35rem .6rem;
            border-radius: 6px;
            font-weight: 700
        }

        .btn-success {
            background: var(--success);
            color: #fff
        }

        .btn-warning {
            background: var(--warning);
            color: #212529
        }

        .btn-danger {
            background: var(--danger);
            color: #fff
        }
        @@media (max-width: 992px) {
            .filters form

        {
            grid-template-columns: repeat(2,1fr)
        }

        }
        @@media (max-width: 560px) {
            .filters form

        {
            grid-template-columns: 1fr
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header de página -->
        <div class="page-header">
            <div class="page-title"><i class="fas fa-boxes"></i> Gestión de Insumos</div>
            <div class="page-actions">
                <a asp-controller="Insumoes" asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nuevo Insumo
                </a>
                <a asp-controller="Inventario" asp-action="Entrada" asp-route-fincaId="@(selFinca ?? 0)" class="btn btn-primary">
                    <i class="fas fa-arrow-down-wide-short"></i> Ingreso de Insumo Existente
                </a>
                <a asp-controller="Insumoes" asp-action="Index" asp-route-fincaId="@(selFinca)" class="btn btn-outline">
                    <i class="fas fa-sync-alt"></i> Actualizar
                </a>
            </div>
        </div>

        <!-- KPIs -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon primary"><i class="fas fa-box"></i></div>
                <div><div style="font-weight:800;font-size:1.3rem">@kTotal</div><div style="color:var(--gray)">Activos</div></div>
            </div>
            <div class="stat-card">
                <div class="stat-icon warning"><i class="fas fa-exclamation-triangle"></i></div>
                <div><div style="font-weight:800;font-size:1.3rem">@kBajo</div><div style="color:var(--gray)">Stock bajo</div></div>
            </div>
            <div class="stat-card">
                <div class="stat-icon danger"><i class="fas fa-times-circle"></i></div>
                <div><div style="font-weight:800;font-size:1.3rem">@kAgotados</div><div style="color:var(--gray)">Agotados</div></div>
            </div>
            <div class="stat-card">
                <div class="stat-icon info"><i class="fas fa-tags"></i></div>
                <div><div style="font-weight:800;font-size:1.3rem">@kCategorias</div><div style="color:var(--gray)">Categorías</div></div>
            </div>
        </div>

        <!-- Filtros -->
        <div class="filters">
            <form method="get" asp-action="Index">
                <div class="field">
                    <label>Finca</label>
                    <select name="fincaId" asp-items="ViewBag.FincaId">
                        <option value="">(Todas)</option>
                    </select>
                </div>
                <div class="field">
                    <label>Categoría</label>
                    <select name="categoriaId" asp-items="ViewBag.CategoriaId">
                        <option value="">(Todas)</option>
                    </select>
                </div>
                <div class="field">
                    <label>Estado</label>
                    <select name="estado">
                        <option value="" selected="@(string.IsNullOrEmpty(selEst) ? "selected" : null)">(Todos)</option>
                        <option value="activo" selected="@(selEst == "activo" ? "selected" : null)">Activo</option>
                        <option value="inactivo" selected="@(selEst == "inactivo" ? "selected" : null)">Inactivo</option>
                        <option value="bajo" selected="@(selEst == "bajo" ? "selected" : null)">Stock Bajo</option>
                        <option value="agotado" selected="@(selEst == "agotado" ? "selected" : null)">Agotado</option>
                    </select>
                </div>
                <div class="field" style="grid-column: span 2;">
                    <label>Buscar</label>
                    <input type="text" name="q" value="@q" placeholder="Nombre o categoría..." />
                </div>
                <div class="field">
                    <button type="submit" class="btn btn-outline"><i class="fas fa-filter"></i> Aplicar</button>
                </div>
            </form>
        </div>

        <!-- Tabla -->
        <div class="table-card">
            <div class="table-header">
                <div style="font-weight:800">Lista de Insumos</div>
                <div class="row-actions">
                    <!-- botón columnas / export si quieres más tarde -->
                    <a asp-controller="Insumoes" asp-action="Create" class="btn btn-outline btn-sm"><i class="fas fa-plus"></i> Nuevo</a>
                </div>
            </div>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th style="width:110px;">Código</th>
                            <th>Nombre</th>
                            <th>Categoría</th>
                            <th style="width:110px;">Stock</th>
                            <th style="width:120px;">Unidad</th>
                            <th style="width:120px;">Estado</th>
                            <th style="width:340px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model)
                        {
                            var stockActual = S(i.InsumoId);
                            var statusCss = i.Activo ? (stockActual == 0 ? "zero" : (stockActual <= i.StockMinimo ? "low" : "ok")) : "off";
                            var statusTxt = i.Activo ? (stockActual == 0 ? "Agotado" : (stockActual <= i.StockMinimo ? "Stock Bajo" : "OK")) : "Inactivo";
                            var codigo = $"INS-{i.InsumoId:D4}";
                            <tr>
                                <td>@codigo</td>
                                <td>@i.Nombre</td>
                                <td>@i.Categoria?.Nombre</td>
                                <td>@stockActual</td>
                                <td>@i.Unidad?.Codigo</td>
                                <td><span class="status @statusCss">@statusTxt</span></td>
                                <td>
                                    <div class="row-actions">
                                        <a class="btn btn-primary btn-sm" asp-controller="Inventario" asp-action="Entrada"
                                           asp-route-insumoId="@i.InsumoId" asp-route-fincaId="@i.FincaId" title="Registrar entrada">
                                            <i class="fas fa-arrow-down-wide-short"></i> Entrada
                                        </a>
                                        <a class="btn btn-warning btn-sm" asp-controller="Inventario" asp-action="Consumo"
                                           asp-route-insumoId="@i.InsumoId" asp-route-fincaId="@i.FincaId" title="Registrar consumo">
                                            <i class="fas fa-arrow-up-wide-short"></i> Consumo
                                        </a>
                                        <a class="btn btn-outline btn-sm" asp-action="Edit" asp-route-id="@i.InsumoId" title="Editar">
                                            <i class="fas fa-edit"></i> Editar
                                        </a>
                                        <a class="btn btn-outline btn-sm" asp-action="Details" asp-route-id="@i.InsumoId" title="Detalles">
                                            <i class="fas fa-eye"></i> Detalle
                                        </a>
                                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@i.InsumoId" title="Eliminar">
                                            <i class="fas fa-trash"></i> Eliminar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div style="height:24px"></div>
    </div>
</body>
</html>
