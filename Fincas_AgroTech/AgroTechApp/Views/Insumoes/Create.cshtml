@using AgroTechApp.ViewModels.Insumo
@model InsumoCreateVM

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Insumo - Sistema de Gestión</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #2E8B57;
            --primary-dark: #26734d;
            --primary-light: #3CB371;
            --secondary: #F4A460;
            --light: #f8f9fa;
            --dark: #333;
            --gray: #6c757d;
            --success: #28a745;
            --warning: #ffc107;
            --danger: #dc3545;
            --info: #17a2b8;
            --border: #e1e5e9;
            --shadow: rgba(0, 0, 0, 0.1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            color: var(--dark);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Header Styles */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .logo-icon {
            font-size: 2.5rem;
            color: var(--primary);
        }

        .logo-text h1 {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 0.25rem;
        }

        .logo-text p {
            color: var(--gray);
            font-size: 0.9rem;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 1rem;
            background: white;
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
            box-shadow: 0 4px 12px var(--shadow);
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary), var(--primary-light));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
        }

        /* Breadcrumb */
        .breadcrumb {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 2rem;
            color: var(--gray);
            font-size: 0.9rem;
        }

            .breadcrumb a {
                color: var(--primary);
                text-decoration: none;
                transition: color 0.2s;
            }

                .breadcrumb a:hover {
                    color: var(--primary-dark);
                }

        /* Main Content */
        .main-content {
            display: grid;
            grid-template-columns: 1fr 350px;
            gap: 2rem;
        }

        @@media (max-width: 900px) {
            .main-content

        {
            grid-template-columns: 1fr;
        }

        }

        /* Form Card */
        .form-card {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 5px 15px var(--shadow);
            animation: fadeIn 0.5s ease forwards;
        }

        .form-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid var(--border);
        }

        .form-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--dark);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .form-title i {
                color: var(--primary);
            }

        .form-body {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
        }

        @@media (max-width: 768px) {
            .form-body

        {
            grid-template-columns: 1fr;
        }

        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

            .form-group.full-width {
                grid-column: 1 / -1;
            }

        label {
            font-weight: 600;
            color: var(--dark);
            font-size: 0.95rem;
        }

        .required::after {
            content: " *";
            color: var(--danger);
        }

        input, select, textarea {
            padding: 0.75rem 1rem;
            border: 1px solid var(--border);
            border-radius: 8px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            background: white;
        }

            input:focus, select:focus, textarea:focus {
                outline: none;
                border-color: var(--primary);
                box-shadow: 0 0 0 3px rgba(46, 139, 87, 0.1);
            }

        textarea {
            min-height: 120px;
            resize: vertical;
        }

        .form-hint {
            font-size: 0.85rem;
            color: var(--gray);
            margin-top: 0.25rem;
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
            padding-top: 1.5rem;
            border-top: 1px solid var(--border);
        }

        .btn {
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 8px;
            font-size: 0.95rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
        }

        .btn-primary {
            background: var(--primary);
            color: white;
        }

            .btn-primary:hover {
                background: var(--primary-dark);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(46, 139, 87, 0.3);
            }

        .btn-secondary {
            background: var(--gray);
            color: white;
        }

            .btn-secondary:hover {
                background: #5a6268;
                transform: translateY(-2px);
            }

        .btn-outline {
            background: transparent;
            color: var(--primary);
            border: 2px solid var(--primary);
        }

            .btn-outline:hover {
                background: var(--primary);
                color: white;
            }

        /* Sidebar */
        .sidebar {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .sidebar-card {
            background: white;
            border-radius: 15px;
            padding: 1.5rem;
            box-shadow: 0 5px 15px var(--shadow);
            animation: fadeIn 0.5s ease forwards;
        }

        .sidebar-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: var(--dark);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .sidebar-title i {
                color: var(--primary);
            }

        /* Recent Activity */
        .activity-list {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .activity-item {
            display: flex;
            gap: 1rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid var(--border);
        }

            .activity-item:last-child {
                border-bottom: none;
                padding-bottom: 0;
            }

        .activity-icon {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1rem;
        }

        .activity-info h4 {
            font-size: 0.95rem;
            margin-bottom: 0.25rem;
        }

        .activity-info p {
            font-size: 0.85rem;
            color: var(--gray);
        }

        /* Validation Styles */
        .error-message {
            color: var(--danger);
            font-size: 0.85rem;
            margin-top: 0.25rem;
            display: none;
        }

        .form-group.error input,
        .form-group.error select,
        .form-group.error textarea {
            border-color: var(--danger);
            box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.1);
        }

        .form-group.error .error-message {
            display: block;
        }

        .form-group.success input,
        .form-group.success select,
        .form-group.success textarea {
            border-color: var(--success);
            box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.1);
        }

        /* Notification */
        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 1rem 1.5rem;
            border-radius: 8px;
            color: white;
            font-weight: 600;
            box-shadow: 0 5px 15px var(--shadow);
            transform: translateX(150%);
            transition: transform 0.3s ease;
            z-index: 1000;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

            .notification.show {
                transform: translateX(0);
            }

            .notification.success {
                background: var(--success);
            }

            .notification.error {
                background: var(--danger);
            }

        /* Footer */
        .footer {
            text-align: center;
            margin-top: 3rem;
            padding-top: 1.5rem;
            border-top: 1px solid var(--border);
            color: var(--gray);
            font-size: 0.9rem;
        }

        /* Animations */
        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@keyframes pulse {
            0%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        100% {
            transform: scale(1);
        }

        }

        .pulse {
            animation: pulse 0.5s ease;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .header

        {
            flex-direction: column;
            align-items: flex-start;
        }

        .form-actions {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header class="header">
            <div class="logo">
                <div class="logo-icon">
                    <i class="fas fa-boxes"></i>
                </div>
                <div class="logo-text">
                    <h1>AgroTech Insumos</h1>
                    <p>Sistema de gestión de insumos agropecuarios</p>
                </div>
            </div>
        </header>

        <!-- Breadcrumb -->
        <div class="breadcrumb">
            <a href="index.html"><i class="fas fa-home"></i> Inicio</a>
            <i class="fas fa-chevron-right"></i>
            <a href="insumos.html">Insumos</a>
            <i class="fas fa-chevron-right"></i>
            <span>Nuevo Insumo</span>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Form Section -->
            <div class="form-card">
                <div class="form-header">
                    <h2 class="form-title">
                        <i class="fas fa-plus-circle"></i>
                        Registrar Nuevo Insumo
                    </h2>
                </div>

                <form asp-action="Create" method="post" id="insumoForm">
                    @Html.AntiForgeryToken()

                    <div class="form-body">
                        <!-- ===== Datos del insumo ===== -->
                        <div class="form-group full-width">
                            <h3 class="sidebar-title" style="margin:0;">
                                <i class="fas fa-box-open"></i> Datos del insumo
                            </h3>
                        </div>

                        <div class="form-group">
                            <label asp-for="Nombre" class="required"></label>
                            <input asp-for="Nombre" placeholder="Ej: Fertilizante NPK 10-10-10" />
                            <span class="form-hint">Nombre comercial o identificador interno.</span>
                            <span asp-validation-for="Nombre" class="error-message"></span>
                        </div>

                        <div class="form-group">
                            <label class="required" for="FincaId">Finca</label>
                            <select asp-for="FincaId" asp-items="ViewBag.FincaId">
                                <option value="">Seleccione una finca</option>
                            </select>
                            <span asp-validation-for="FincaId" class="error-message"></span>
                        </div>

                        <div class="form-group">
                            <label class="required" for="CategoriaId">Categoría</label>
                            <select asp-for="CategoriaId" asp-items="ViewBag.CategoriaId">
                                <option value="">Seleccione una categoría</option>
                            </select>
                            <span asp-validation-for="CategoriaId" class="error-message"></span>
                        </div>

                        <div class="form-group">
                            <label class="required" for="UnidadId">Unidad de medida</label>
                            <select asp-for="UnidadId" asp-items="ViewBag.UnidadId">
                                <option value="">Seleccione unidad</option>
                            </select>
                            <span class="form-hint">Ej.: kg, l, unidad, saco…</span>
                            <span asp-validation-for="UnidadId" class="error-message"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="StockMinimo" class="required">Stock mínimo</label>
                            <input asp-for="StockMinimo" type="number" step="1" min="0" />
                            <span class="form-hint">Usado para alertas de reposición.</span>
                            <span asp-validation-for="StockMinimo" class="error-message"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Activo">Activo</label>
                            <select asp-for="Activo">
                                <option value="true">Sí</option>
                                <option value="false">No</option>
                            </select>
                        </div>

                        @* <!-- ===== Entrada inicial ===== -->
                        <div class="form-group full-width" style="margin-top: .5rem;">
                            <h3 class="sidebar-title" style="margin:0;">
                                <i class="fas fa-truck-loading"></i> Entrada inicial
                            </h3>
                        </div>

                        <div class="form-group full-width">
                            <label>
                                <input asp-for="RegistrarEntradaInicial" type="checkbox" id="RegistrarEntradaInicial" />
                                Registrar entrada inicial (cantidad / precio / fechas)
                            </label>
                        </div>

                        <div id="entradaContainer" class="full-width" style="display:block;">
                            <div class="form-group">
                                <label asp-for="Cantidad" class="required">Cantidad</label>
                                <input asp-for="Cantidad" type="number" step="1" min="0" placeholder="0.00" />
                                <span asp-validation-for="Cantidad" class="error-message"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="PrecioUnitario">Precio unitario</label>
                                <input asp-for="PrecioUnitario" type="number" step="1" min="0" placeholder="0.00" />
                                <span class="form-hint">Opcional (para compras).</span>
                                <span asp-validation-for="PrecioUnitario" class="error-message"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="FechaIngreso" class="required">Fecha de ingreso</label>
                                <input asp-for="FechaIngreso" type="date" />
                                <span asp-validation-for="FechaIngreso" class="error-message"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="FechaVencimiento">Fecha de vencimiento</label>
                                <input asp-for="FechaVencimiento" type="date" />
                                <span class="form-hint">Opcional (solo si aplica vencimiento).</span>
                                <span asp-validation-for="FechaVencimiento" class="error-message"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CodigoLote">Código de lote</label>
                                <input asp-for="CodigoLote" placeholder="Ej.: LOTE-AZ-2025" />
                                <span class="form-hint">Opcional (si gestionas lotes).</span>
                                <span asp-validation-for="CodigoLote" class="error-message"></span>
                            </div>

                            <div class="form-group full-width">
                                <label asp-for="Observaciones">Observaciones (documento de entrada)</label>
                                <textarea asp-for="Observaciones" placeholder="Notas de la compra o recepción..."></textarea>
                                <span asp-validation-for="Observaciones" class="error-message"></span>
                            </div>
                        </div>

                        <div class="form-group full-width">
                            <span asp-validation-summary="ModelOnly" class="error-message"></span>
                        </div> *@
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Guardar Insumo
                        </button>
                        <button type="button" id="btnLimpiar" class="btn btn-outline">
                            <i class="fas fa-broom"></i> Limpiar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancelar
                        </a>
                    </div>
                </form>

            </div>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Help Card -->
                <div class="sidebar-card">
                    <h3 class="sidebar-title">
                        <i class="fas fa-info-circle"></i>
                        Información Importante
                    </h3>
                    <div class="activity-list">
                        <div class="activity-item">
                            <div class="activity-icon" style="background: var(--primary);">
                                <i class="fas fa-exclamation"></i>
                            </div>
                            <div class="activity-info">
                                <h4>Campos Obligatorios</h4>
                                <p>Los campos marcados con * son obligatorios para registrar el insumo.</p>
                            </div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-icon" style="background: var(--info);">
                                <i class="fas fa-calendar"></i>
                            </div>
                            <div class="activity-info">
                                <h4>Fechas de Vencimiento</h4>
                                <p>Complete este campo solo para productos con fecha de caducidad.</p>
                            </div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-icon" style="background: var(--warning);">
                                <i class="fas fa-tags"></i>
                            </div>
                            <div class="activity-info">
                                <h4>Categorización</h4>
                                <p>Seleccione la categoría que mejor describa el tipo de insumo.</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Stats -->
                <div class="sidebar-card">
                    <h3 class="sidebar-title">
                        <i class="fas fa-chart-bar"></i>
                        Estadísticas Rápidas
                    </h3>
                    <div class="activity-list">
                        <div class="activity-item">
                            <div class="activity-info">
                                <h4>Total de Insumos</h4>
                                <p>147 productos registrados</p>
                            </div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-info">
                                <h4>Por Vencer</h4>
                                <p>8 productos este mes</p>
                            </div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-info">
                                <h4>Stock Bajo</h4>
                                <p>12 productos necesitan reposición</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer class="footer">
            <p>© 2023 AgroTech - Sistema de Gestión de Insumos. Todos los derechos reservados.</p>
        </footer>
    </div>

    <!-- Notification -->
    <div id="notification" class="notification">
        <i class="fas fa-check-circle"></i>
        <span id="notification-message"></span>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
          const form = document.getElementById('insumoForm');
          const btnLimpiar = document.getElementById('btnLimpiar');
          const notification = document.getElementById('notification');
          const notificationMessage = document.getElementById('notification-message');

          // Toggle entrada inicial
          const toggleEntrada = document.getElementById('RegistrarEntradaInicial');
          const entradaContainer = document.getElementById('entradaContainer');

          const cantidadEl = document.getElementById('Cantidad');
          const fechaIngresoEl = document.getElementById('FechaIngreso');

          const applyToggle = () => {
            if (!toggleEntrada || !entradaContainer) return;
            const on = toggleEntrada.checked;
            entradaContainer.style.display = on ? '' : 'none';
            if (cantidadEl) cantidadEl.required = on;
            if (fechaIngresoEl) fechaIngresoEl.required = on;
          };
          if (toggleEntrada) {
            toggleEntrada.addEventListener('change', applyToggle);
            applyToggle();
          }

          // Fecha hoy por defecto (si existe)
          const today = new Date().toISOString().split('T')[0];
          if (fechaIngresoEl && !fechaIngresoEl.value) fechaIngresoEl.value = today;

          // Validación simple (client-side)
          const inputs = form.querySelectorAll('input, select, textarea');
          inputs.forEach(input => {
            input.addEventListener('blur', () => validateField(input));
            input.addEventListener('input', () => input.parentElement.classList.remove('error'));
          });

          function validateField(field) {
            const group = field.parentElement;
            const value = (field.value || '').trim();
            let ok = true;

            if (field.required && !value) ok = false;
            if (field.type === 'number' && value) {
              const n = parseFloat(value);
              if (isNaN(n) || n < 0) ok = false;
            }
            if (field.id === 'FechaVencimiento' && value && fechaIngresoEl && fechaIngresoEl.value) {
              const fi = new Date(fechaIngresoEl.value);
              const fv = new Date(value);
              if (fv < fi) {
                ok = false;
                const em = group.querySelector('.error-message');
                if (em) em.textContent = 'La fecha de vencimiento no puede ser anterior a la fecha de ingreso';
              }
            }

            if (!ok) {
              group.classList.add('error');
              group.classList.remove('success');
            } else if (value) {
              group.classList.remove('error');
              group.classList.add('success');
            } else {
              group.classList.remove('error', 'success');
            }
            return ok;
          }

          function validateForm() {
            let ok = true;
            const requiredFields = form.querySelectorAll('[required]');
            requiredFields.forEach(f => { if (!validateField(f)) ok = false; });
            return ok;
          }

          // Submit
          form.addEventListener('submit', function (e) {
            if (!validateForm()) {
              e.preventDefault();
              showNotification('Por favor, complete los campos requeridos.', 'error');
              const firstError = form.querySelector('.error');
              if (firstError) firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
              return;
            }
            const submitBtn = form.querySelector('button[type="submit"]');
            if (submitBtn) {
              submitBtn.disabled = true;
              submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Guardando...';
            }
          });

          // Limpiar
          if (btnLimpiar) {
            btnLimpiar.addEventListener('click', function () {
              if (!confirm('¿Limpiar el formulario?')) return;
              form.reset();
              document.querySelectorAll('.form-group').forEach(g => g.classList.remove('success', 'error'));
              if (fechaIngresoEl) fechaIngresoEl.value = today;
              applyToggle();
              showNotification('Formulario limpiado.', 'success');
            });
          }

          function showNotification(message, type) {
            if (!notification) return;
            notificationMessage.textContent = message;
            notification.className = `notification ${type}`;
            notification.classList.add('show');
            setTimeout(() => notification.classList.remove('show'), 4000);
          }
        });
    </script>


</body>
</html>