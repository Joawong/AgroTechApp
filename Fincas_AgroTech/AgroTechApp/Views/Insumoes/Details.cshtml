    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Copy barcode functionality
            const barcodeElement = document.getElementById('barcode');
            const copyNotification = document.getElementById('copyNotification');

            barcodeElement.addEventListener('click', function() {
                const barcodeText = '7891234567890';
                navigator.clipboard.writeText(barcodeText).then(() => {
                    copyNotification.classList.add('show');
                    setTimeout(() => {
                        copyNotification.classList.remove('show');
                    }, 2500);
                });
            });

            // Add stock button interaction
            const addStockBtn = document.getElementById('addStockBtn');
            addStockBtn.addEventListener('click', function() {
                const amount = prompt('Ingrese la cantidad a agregar (kg):');
                if (amount && !isNaN(amount)) {
                    alert(`Se agregarán ${amount} kg al stock.`);
                    // Here you would typically make an API call
                }
            });

            // Use stock button interaction
            const useStockBtn = document.getElementById('useStockBtn');
            useStockBtn.addEventListener('click', function() {
                const amount = prompt('Ingrese la cantidad a utilizar (kg):');
                if (amount && !isNaN(amount)) {
                    alert(`Se utilizarán ${amount} kg del stock.`);
                    // Here you would typically make an API call
                }
            });

            // Interactive values hover effect
            const interactiveValues = document.querySelectorAll('.interactive-value');
            interactiveValues.forEach(value => {
                value.addEventListener('mouseenter', function() {
                    this.style.backgroundColor = '#f8f9fa';
                    this.style.transform = 'translateX(5px)';
                });

                value.addEventListener('mouseleave', function() {
                    this.style.backgroundColor = '';
                    this.style.transform = '';
                });
            });

            // Card hover effects
            const cards = document.querySelectorAll('.card');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                });

                card.addEventListener('mouseleave', function() {
                    this.style.transform = '';
                });
            });

            // Simulate loading animation
            const progressFill = document.querySelector('.progress-fill');
            setTimeout(() => {
                progressFill.style.width = '45%';
            }, 500);
        });
    </script>
</body>
