@model AgroTechApp.Models.DB.Pesaje

@{
    ViewData["Title"] = "Detalles del Pesaje";
    var primaryColor = "#2E8B57";
    var secondaryColor = "#F4A460";
    var accentColor = "#4cc9f0";

    // Obtener todos los pesajes del animal (esto debe venir del controller)
    var historialPesajes = ViewBag.HistorialPesajes as List<AgroTechApp.Models.DB.Pesaje> ?? new List<AgroTechApp.Models.DB.Pesaje>();
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalles del Pesaje - AgroTech</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        :root {
            --primary: @primaryColor;
            --primary-dark: #26734d;
            --secondary: @secondaryColor;
            --accent: @accentColor;
            --success: #28a745;
            --warning: #f59e0b;
            --danger: #ef4444;
            --dark: #1e293b;
            --light: #f8fafc;
            --gray: #64748b;
            --border: #e2e8f0;
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            padding: 20px;
            color: var(--dark);
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            animation: fadeIn 0.6s ease-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Header */
        .header {
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            color: white;
            padding: 2.5rem;
            position: relative;
            overflow: hidden;
        }

        .header-content {
            position: relative;
            z-index: 2;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1.5rem;
        }

        .header-text h1 {
            font-size: 2.2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .header-text p {
            font-size: 1.1rem;
            opacity: 0.9;
        }

        .back-btn {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border: 2px solid rgba(255, 255, 255, 0.3);
            padding: 0.875rem 1.5rem;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
        }

            .back-btn:hover {
                background: rgba(255, 255, 255, 0.3);
                transform: translateX(-5px);
            }

        /* Stats Cards */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            padding: 2rem;
            background: var(--light);
            border-bottom: 1px solid var(--border);
        }

        .stat-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            border-left: 4px solid var(--primary);
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }

        .stat-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            background: linear-gradient(135deg, var(--primary), var(--accent));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
        }

        .stat-value {
            font-size: 2rem;
            font-weight: 800;
            color: var(--primary);
            margin-bottom: 0.25rem;
        }

        .stat-label {
            color: var(--gray);
            font-size: 0.9rem;
            font-weight: 600;
        }

        .stat-change {
            margin-top: 0.5rem;
            padding: 0.35rem 0.75rem;
            border-radius: 50px;
            font-size: 0.85rem;
            font-weight: 600;
            display: inline-block;
        }

            .stat-change.positive {
                background: rgba(40, 167, 69, 0.15);
                color: var(--success);
            }

            .stat-change.negative {
                background: rgba(239, 68, 68, 0.15);
                color: var(--danger);
            }

        /* Tabs */
        .tabs-container {
            border-bottom: 1px solid var(--border);
        }

        .tabs {
            display: flex;
            gap: 0;
            flex-wrap: wrap;
            padding: 0 2rem;
        }

        .tab {
            padding: 1.25rem 2rem;
            cursor: pointer;
            font-weight: 600;
            color: var(--gray);
            border-bottom: 3px solid transparent;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

            .tab.active {
                color: var(--primary);
                border-bottom: 3px solid var(--primary);
                background: rgba(46, 139, 87, 0.05);
            }

            .tab:hover:not(.active) {
                color: var(--dark);
                background: var(--light);
            }

        /* Tab Content */
        .tab-content {
            display: none;
            padding: 2.5rem;
        }

            .tab-content.active {
                display: block;
                animation: fadeIn 0.4s ease-out;
            }

        /* Chart Container */
        .chart-container {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 2rem;
            border: 1px solid var(--border);
        }

        .chart-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .chart-title {
            font-size: 1.3rem;
            font-weight: 600;
            color: var(--dark);
        }

        /* Historial Table */
        .historial-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
        }

            .historial-table th {
                background: var(--light);
                padding: 1rem;
                text-align: left;
                font-weight: 600;
                color: var(--dark);
                border-bottom: 2px solid var(--border);
            }

            .historial-table td {
                padding: 1rem;
                border-bottom: 1px solid var(--border);
            }

            .historial-table tbody tr:hover {
                background: rgba(46, 139, 87, 0.05);
            }

        .peso-actual {
            background: linear-gradient(135deg, var(--primary), var(--accent));
            color: white;
            padding: 0.35rem 0.75rem;
            border-radius: 50px;
            font-weight: 600;
        }

        .ganancia {
            display: inline-flex;
            align-items: center;
            gap: 0.35rem;
            font-weight: 600;
        }

            .ganancia.positiva {
                color: var(--success);
            }

            .ganancia.negativa {
                color: var(--danger);
            }

        /* Actions */
        .actions-section {
            background: var(--light);
            padding: 2rem 2.5rem;
            border-top: 1px solid var(--border);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1.5rem;
        }

        .btn {
            padding: 0.875rem 1.5rem;
            border: none;
            border-radius: 10px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            color: white;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(46, 139, 87, 0.4);
            }

        .btn-danger {
            background: linear-gradient(135deg, var(--danger), #dc2626);
            color: white;
        }

        .empty-state {
            text-align: center;
            padding: 3rem;
            color: var(--gray);
        }

            .empty-state i {
                font-size: 4rem;
                margin-bottom: 1rem;
                opacity: 0.5;
            }

        /* Responsive */
        @@media (max-width: 768px) {
            .container {
                margin: 10px;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .tabs {
                flex-direction: column;
                padding: 0;
            }

            .tab-content {
                padding: 1.5rem;
            }

            .historial-table {
                font-size: 0.85rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <div class="header">
            <div class="header-content">
                <div class="header-text">
                    <h1>📊 Análisis de Pesaje</h1>
                    <p>Animal: @(Model.Animal?.Nombre ?? "Sin nombre") (@Model.Animal?.Arete)</p>
                </div>
                <a asp-action="Index" class="back-btn">
                    <i class="fas fa-arrow-left"></i>
                    Volver
                </a>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="fas fa-weight-hanging"></i>
                    </div>
                </div>
                <div class="stat-value">@Model.PesoKg kg</div>
                <div class="stat-label">Peso Actual</div>
                @if (historialPesajes.Count > 1)
                {
                    var pesajeAnterior = historialPesajes.OrderByDescending(p => p.Fecha).Skip(1).FirstOrDefault();
                    if (pesajeAnterior != null)
                    {
                        var diferencia = Model.PesoKg - pesajeAnterior.PesoKg;
                        var clase = diferencia >= 0 ? "positive" : "negative";
                        var icono = diferencia >= 0 ? "▲" : "▼";
                        <span class="stat-change @clase">
                            @icono @Math.Abs(diferencia).ToString("0.0") kg
                        </span>
                    }
                }
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon" style="background: linear-gradient(135deg, var(--success), #22c55e);">
                        <i class="fas fa-chart-line"></i>
                    </div>
                </div>
                @if (historialPesajes.Count > 1)
                {
                    var primerPesaje = historialPesajes.OrderBy(p => p.Fecha).First();
                    var gananciaTotal = Model.PesoKg - primerPesaje.PesoKg;
                    <div class="stat-value">@gananciaTotal.ToString("+0.0;-0.0") kg</div>
                    <div class="stat-label">Ganancia Total</div>
                }
                else
                {
                    <div class="stat-value">--</div>
                    <div class="stat-label">Ganancia Total</div>
                }
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon" style="background: linear-gradient(135deg, var(--warning), #f59e0b);">
                        <i class="fas fa-calendar-day"></i>
                    </div>
                </div>
                @if (historialPesajes.Count > 1)
                {
                    var primerPesaje = historialPesajes.OrderBy(p => p.Fecha).First();
                    var ultimoPesaje = historialPesajes.OrderByDescending(p => p.Fecha).First();
                    var diasTranscurridos = (ultimoPesaje.Fecha - primerPesaje.Fecha).Days;
                    var gdp = diasTranscurridos > 0 ? (ultimoPesaje.PesoKg - primerPesaje.PesoKg) / diasTranscurridos : 0;
                    <div class="stat-value">@gdp.ToString("0.000")</div>
                    <div class="stat-label">GDP (kg/día)</div>
                }
                else
                {
                    <div class="stat-value">--</div>
                    <div class="stat-label">GDP (kg/día)</div>
                }
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon" style="background: linear-gradient(135deg, var(--accent), #06b6d4);">
                        <i class="fas fa-history"></i>
                    </div>
                </div>
                <div class="stat-value">@historialPesajes.Count</div>
                <div class="stat-label">Total Pesajes</div>
            </div>
        </div>

        <!-- Tabs -->
        <div class="tabs-container">
            <div class="tabs">
                <div class="tab active" data-tab="grafica">
                    <i class="fas fa-chart-area"></i>
                    Gráfica de Evolución
                </div>
                <div class="tab" data-tab="historial">
                    <i class="fas fa-history"></i>
                    Historial Completo
                </div>
                <div class="tab" data-tab="detalles">
                    <i class="fas fa-info-circle"></i>
                    Detalles del Pesaje
                </div>
            </div>
        </div>

        <!-- Tab: Gráfica -->
        <div class="tab-content active" id="grafica">
            <div class="chart-container">
                <div class="chart-header">
                    <div class="chart-title">📈 Evolución del Peso</div>
                </div>
                <canvas id="pesoChart" style="max-height: 400px;"></canvas>
            </div>
        </div>

        <!-- Tab: Historial -->
        <div class="tab-content" id="historial">
            <div class="chart-container">
                <div class="chart-header">
                    <div class="chart-title">📋 Historial de Pesajes</div>
                </div>
                @if (historialPesajes.Any())
                {
                    <table class="historial-table">
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Peso (kg)</th>
                                <th>Ganancia</th>
                                <th>Días</th>
                                <th>GDP</th>
                                <th>Observaciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var pesajesOrdenados = historialPesajes.OrderByDescending(p => p.Fecha).ToList();
                                for (int i = 0; i < pesajesOrdenados.Count; i++)
                                {
                                    var pesaje = pesajesOrdenados[i];
                                    var esActual = pesaje.PesajeId == Model.PesajeId;

                                    decimal? ganancia = null;
                                    int? dias = null;
                                    decimal? gdp = null;

                                    if (i < pesajesOrdenados.Count - 1)
                                    {
                                        var pesajeAnterior = pesajesOrdenados[i + 1];
                                        ganancia = pesaje.PesoKg - pesajeAnterior.PesoKg;
                                        dias = (pesaje.Fecha - pesajeAnterior.Fecha).Days;
                                        gdp = dias > 0 ? ganancia / dias : 0;
                                    }

                                    <tr style="@(esActual ? "background: rgba(46, 139, 87, 0.1);" : "")">
                                        <td>
                                            @pesaje.Fecha.ToString("dd/MM/yyyy HH:mm")
                                            @if (esActual)
                                            {
                                                <span class="peso-actual">Actual</span>
                                            }
                                        </td>
                                        <td>
                                            <strong style="color: var(--primary);">@pesaje.PesoKg kg</strong>
                                        </td>
                                        <td>
                                            @if (ganancia.HasValue)
                                            {
                                                var clase = ganancia >= 0 ? "positiva" : "negativa";
                                                var icono = ganancia >= 0 ? "▲" : "▼";
                                                <span class="ganancia @clase">
                                                    @icono @Math.Abs(ganancia.Value).ToString("0.0") kg
                                                </span>
                                            }
                                            else
                                            {
                                                <span style="color: var(--gray);">Primer pesaje</span>
                                            }
                                        </td>
                                        <td>
                                            @(dias?.ToString() ?? "--") días
                                        </td>
                                        <td>
                                            @(gdp.HasValue? gdp.Value.ToString("0.000") : "--") kg/día
                                        </td>
                                        <td>
                                            @(pesaje.Observacion ?? "-")
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state">
                        <i class="fas fa-weight-hanging"></i>
                        <p>No hay historial de pesajes disponible</p>
                    </div>
                }
            </div>
        </div>

        <!-- Tab: Detalles -->
        <div class="tab-content" id="detalles">
            <div class="chart-container">
                <div class="chart-header">
                    <div class="chart-title">ℹ️ Detalles del Pesaje Actual</div>
                </div>
                <table class="historial-table">
                    <tr>
                        <th>ID del Pesaje</th>
                        <td>#@Model.PesajeId</td>
                    </tr>
                    <tr>
                        <th>Animal</th>
                        <td>
                            <strong>@Model.Animal?.Nombre</strong> (Arete: @Model.Animal?.Arete)
                        </td>
                    </tr>
                    <tr>
                        <th>Fecha y Hora</th>
                        <td>@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                    <tr>
                        <th>Peso Registrado</th>
                        <td><strong style="color: var(--primary); font-size: 1.2rem;">@Model.PesoKg kg</strong></td>
                    </tr>
                    <tr>
                        <th>Observaciones</th>
                        <td>@(Model.Observacion ?? "Sin observaciones")</td>
                    </tr>
                </table>
            </div>
        </div>

        <!-- Actions -->
        <div class="actions-section">
            <div>
                <a asp-action="Edit" asp-route-id="@Model.PesajeId" class="btn btn-primary">
                    <i class="fas fa-edit"></i>
                    Editar Pesaje
                </a>
                <a asp-action="Delete" asp-route-id="@Model.PesajeId" class="btn btn-danger">
                    <i class="fas fa-trash"></i>
                    Eliminar
                </a>
            </div>
        </div>
    </div>

    <script>
        // Tab functionality
        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', () => {
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));

                tab.classList.add('active');
                document.getElementById(tab.getAttribute('data-tab')).classList.add('active');
            });
        });

        // Chart
        const ctx = document.getElementById('pesoChart').getContext('2d');

        const fechas = @Html.Raw(Json.Serialize(historialPesajes.OrderBy(p => p.Fecha).Select(p => p.Fecha.ToString("dd/MM")).ToList()));
        const pesos = @Html.Raw(Json.Serialize(historialPesajes.OrderBy(p => p.Fecha).Select(p => p.PesoKg).ToList()));

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: fechas,
                datasets: [{
                    label: 'Peso (kg)',
                    data: pesos,
                    borderColor: '@primaryColor',
                    backgroundColor: 'rgba(46, 139, 87, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4,
                    pointRadius: 6,
                    pointHoverRadius: 8
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return 'Peso: ' + context.parsed.y + ' kg';
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: false,
                        ticks: {
                            callback: function(value) {
                                return value + ' kg';
                            }
                        }
                    }
                }
            }
        });
    </script>
</body>
</html>