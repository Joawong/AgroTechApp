@model AgroTechApp.Models.DB.Tratamiento

@{
    ViewData["Title"] = "Eliminar Tratamiento";
    var primaryColor = "#2E8B57";
    var secondaryColor = "#F4A460";
    var lightColor = "#f8f9fa";
    var dangerColor = "#dc3545";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgroTech</title>
    <style>
        :root {
            --primary: @primaryColor;
            --secondary: @secondaryColor;
            --light: @lightColor;
            --dark: #333;
            --success: #28a745;
            --danger: @dangerColor;
        }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            margin: 0;
            padding: 20px;
            min-height: 100vh;
        }

        .delete-container {
            max-width: 900px;
            margin: 0 auto;
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            overflow: hidden;
        }

        .delete-header {
            background: linear-gradient(135deg, var(--danger), #c82333);
            color: white;
            padding: 2rem;
            text-align: center;
        }

            .delete-header h1 {
                margin: 0;
                font-size: 2.2rem;
                font-weight: 600;
            }

            .delete-header p {
                margin: 0.5rem 0 0;
                opacity: 0.9;
                font-size: 1.1rem;
            }

        .delete-body {
            padding: 2rem;
        }

        .warning-alert {
            background: #fff3cd;
            border: 1px solid #ffeaa7;
            border-radius: 10px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

            .warning-alert .icon {
                font-size: 2rem;
                color: #856404;
            }

            .warning-alert .content h3 {
                margin: 0 0 0.5rem;
                color: #856404;
            }

            .warning-alert .content p {
                margin: 0;
                color: #856404;
                opacity: 0.9;
            }

        .details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .details-section {
            background: var(--light);
            padding: 1.5rem;
            border-radius: 10px;
            border-left: 4px solid var(--danger);
        }

            .details-section h3 {
                color: var(--danger);
                margin-top: 0;
                margin-bottom: 1rem;
                font-size: 1.2rem;
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

        .detail-group {
            margin-bottom: 1rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #dee2e6;
        }

            .detail-group:last-child {
                border-bottom: none;
                margin-bottom: 0;
                padding-bottom: 0;
            }

        .detail-label {
            font-weight: 600;
            color: var(--dark);
            font-size: 0.95rem;
            margin-bottom: 0.25rem;
        }

        .detail-value {
            color: #666;
            font-size: 1rem;
        }

            .detail-value.empty {
                color: #999;
                font-style: italic;
            }

        .btn-group {
            display: flex;
            gap: 1rem;
            justify-content: flex-end;
            flex-wrap: wrap;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid #e1e5e9;
        }

        .btn {
            padding: 0.75rem 2rem;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            text-decoration: none;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-danger {
            background-color: var(--danger);
            color: white;
        }

            .btn-danger:hover {
                background-color: #c82333;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
            }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                transform: translateY(-2px);
            }

        .icon {
            font-size: 1.2rem;
        }

        .treatment-illustration {
            text-align: center;
            margin: 1rem 0 2rem;
        }

        .treatment-icon {
            font-size: 4rem;
            color: var(--danger);
            margin-bottom: 1rem;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            body {
                padding: 10px;
            }

            .delete-header {
                padding: 1.5rem;
            }

                .delete-header h1 {
                    font-size: 1.8rem;
                }

            .delete-body {
                padding: 1.5rem;
            }

            .details-grid {
                grid-template-columns: 1fr;
            }

            .btn-group {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }

            .warning-alert {
                flex-direction: column;
                text-align: center;
            }
        }

        @@media (max-width: 480px) {
            .delete-header h1 {
                font-size: 1.5rem;
            }

            .delete-body {
                padding: 1rem;
            }

            .details-section {
                padding: 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="delete-container">
        <div class="delete-header">
            <h1>⚠️ Eliminar Tratamiento</h1>
            <p>Confirme la eliminación del registro de tratamiento</p>
        </div>

        <div class="delete-body">
            <div class="treatment-illustration">
                <div class="treatment-icon">💉</div>
            </div>

            <div class="warning-alert">
                <div class="icon">⚠️</div>
                <div class="content">
                    <h3>¿Está seguro que desea eliminar este tratamiento?</h3>
                    <p>Esta acción no se puede deshacer. Se eliminará permanentemente el registro del tratamiento y toda la información asociada.</p>
                </div>
            </div>

            <form asp-controller="Tratamientos" asp-action="Delete" method="post" id="deleteForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="TratamientoId" />

                <div class="details-grid">
                    <!-- Información General -->
                    <div class="details-section">
                        <h3>📋 Información General</h3>

                        <div class="detail-group">
                            <div class="detail-label">🏠 Finca</div>
                            <div class="detail-value">@(Model.Finca?.Nombre ?? "No especificada")</div>
                        </div>

                        <div class="detail-group">
                            <div class="detail-label">💊 Tipo de Tratamiento</div>
                            <div class="detail-value">@(Model.TipoTrat?.Nombre ?? "No especificado")</div>
                        </div>

                        <div class="detail-group">
                            <div class="detail-label">📅 Fecha del Tratamiento</div>
                            <div class="detail-value">@Model.Fecha.ToString("dd/MM/yyyy")</div>
                        </div>

                        <div class="detail-group">
                            <div class="detail-label">👨‍⚕️ Responsable</div>
                            <div class="detail-value @(string.IsNullOrEmpty(Model.Responsable) ? "empty" : "")">
                                @(string.IsNullOrEmpty(Model.Responsable) ? "No especificado" : Model.Responsable)
                            </div>
                        </div>
                    </div>

                    <!-- Aplicación -->
                    <div class="details-section">
                        <h3>🔬 Detalles de Aplicación</h3>

                        <div class="detail-group">
                            <div class="detail-label">🐄 Animal</div>
                            <div class="detail-value @(Model.Animal == null ? "empty" : "")">
                                @(Model.Animal == null ? "No aplicado a animal individual" : $"{Model.Animal.Nombre} ({Model.Animal.Arete})")
                            </div>
                        </div>

                        <div class="detail-group">
                            <div class="detail-label">📦 Lote de Animales</div>
                            <div class="detail-value @(Model.LoteAnimal == null ? "empty" : "")">
                                @(Model.LoteAnimal == null ? "No aplicado a lote" : Model.LoteAnimal.Nombre)
                            </div>
                        </div>

                        <div class="detail-group">
                            <div class="detail-label">💊 Insumo</div>
                            <div class="detail-value @(Model.Insumo == null ? "empty" : "")">
                                @(Model.Insumo == null ? "No especificado" : Model.Insumo.Nombre)
                            </div>
                        </div>



                        <!-- Detalles Técnicos -->
                        <div class="details-section">
                            <h3>⚙️ Detalles Técnicos</h3>

                            <div class="detail-group">
                                <div class="detail-label">📊 Dosis</div>
                                <div class="detail-value @(string.IsNullOrEmpty(Model.Dosis) ? "empty" : "")">
                                    @(string.IsNullOrEmpty(Model.Dosis) ? "No especificada" : Model.Dosis)
                                </div>
                            </div>

                            <div class="detail-group">
                                <div class="detail-label">🩹 Vía de Administración</div>
                                <div class="detail-value @(string.IsNullOrEmpty(Model.Via) ? "empty" : "")">
                                    @(string.IsNullOrEmpty(Model.Via) ? "No especificada" : Model.Via)
                                </div>
                            </div>

                            <div class="detail-group">
                                <div class="detail-label">📝 Observaciones</div>
                                <div class="detail-value @(string.IsNullOrEmpty(Model.Observacion) ? "empty" : "")">
                                    @(string.IsNullOrEmpty(Model.Observacion) ? "No hay observaciones" : Model.Observacion)
                                </div>
                            </div>

                            <div class="detail-group">
                                <div class="detail-label">⏰ Períodos de Retiro</div>
                                <div class="detail-value @(Model.PeriodoRetiros == null || !Model.PeriodoRetiros.Any() ? "empty" : "")">
                                    @(Model.PeriodoRetiros == null || !Model.PeriodoRetiros.Any() ? "No hay períodos de retiro registrados" : $"{Model.PeriodoRetiros.Count} período(s) de retiro")
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="btn-group">
                        <a asp-action="Index" class="btn btn-secondary">
                            <span class="icon">←</span> Cancelar y Volver
                        </a>
                        <button type="submit" class="btn btn-danger" onclick="confirmDelete(event)">
                            <span class="icon">🗑️</span> Eliminar Tratamiento
                        </button>
                    </div>
            </form>
        </div>
    </div>

    <script>
        function confirmDelete(event) {
            event.preventDefault();

            if (confirm('¿Está completamente seguro de que desea eliminar este tratamiento? Esta acción no se puede deshacer.')) {
                document.getElementById('deleteForm').submit();
            }
        }

        // Mejora la experiencia del usuario
        document.addEventListener('DOMContentLoaded', function() {
            // Agregar efectos de hover a los botones
            const buttons = document.querySelectorAll('.btn');
            buttons.forEach(button => {
                button.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px)';
                });
                button.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>
</body>
</html>